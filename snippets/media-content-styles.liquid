  #shopify-section-{{ section.id }} .media-column .media-text-wrapper.media-align-flex-start {
  align-items: flex-start;
  }
  
  #shopify-section-{{ section.id }} .media-column .media-text-wrapper.media-align-center {
  align-items: center;
  }
  
  #shopify-section-{{ section.id }} .media-column .media-text-wrapper.media-align-flex-end {
  align-items: flex-end;
  }
  
  /* Media Column Content Vertical Alignment */
  #shopify-section-{{ section.id }} .media-column .media-text-wrapper.media-valign-flex-start {
  justify-content: flex-start;
  }
  
  #shopify-section-{{ section.id }} .media-column .media-text-wrapper.media-valign-center {
  justify-content: center;
  }
  
  #shopify-section-{{ section.id }} .media-column .media-text-wrapper.media-valign-flex-end {
  justify-content: flex-end;
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
  #shopify-section-{{ section.id }} .media-column .majortitle {
  font-size: {{ section.settings.media_mobile_heading_size }}px;
  }
  
  #shopify-section-{{ section.id }} .media-column .rte {
  font-size: {{ section.settings.media_mobile_text_size }}px;
  line-height: 1.2;
  }
  
  #shopify-section-{{ section.id }} .media-column .btn-1,
  #shopify-section-{{ section.id }} .media-column .btn-2 {
  font-size: {{ section.settings.media_mobile_button_size }}px;
  }
  }
{% endstyle %}
