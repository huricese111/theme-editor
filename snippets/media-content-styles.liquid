{% style %}
      .full-width-section {
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        overflow: hidden;
      }

      .media-column .button-container {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        width: 100%;
        justify-content: {{ section.settings.media_button_alignment }};
      }

      #shopify-section-{{ section.id }}
      .flexible-layout {
        display: flex;
        align-items: stretch;
        min-height: {{ section.settings.min_section_height }}px;
      }

      .column--media {
        height: auto !important;
        position: relative;
        min-height: {{ section.settings.min_column_height }}px;
      }

      .title, .majortitle {
      margin: 0;
  }

      .media-overlap__background {
        height: 100%;
        min-height: auto;
        background-repeat: no-repeat;
      }

      .media-column .media-text-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        padding: 80px;
        z-index: 2;
        display: flex;
        flex-direction: column;
        justify-content: center;
      }

      .media-column .text-align {
        text-align: {{ section.settings.media_text_alignment }};
      }

      .media-column .majortitle {
        color: {{ section.settings.media_heading_color }};
        font-size: {{ section.settings.media_desktop_heading_size }}px;
      }

      .media-column .subheading {
        color: {{ section.settings.media_subheading_color }};
        font-size: {{ section.settings.media_desktop_subheading_size }}px;
      }

      .media-column .rte {
        color: {{ section.settings.media_text_color }};
        font-size: {{ section.settings.media_desktop_text_size }}px;
      }

      .media-column .btn-1 {
        color: {{ section.settings.media_button1_text_color }};
        background: {{ section.settings.media_button1_bg_color }};
        border-color: {{ section.settings.media_button1_border_color }};
        font-size: {{ section.settings.media_desktop_button_size }}px;
        white-space: nowrap;
      }

      .media-column .btn-2 {
        color: {{ section.settings.media_button2_text_color }};
        background: {{ section.settings.media_button2_bg_color }};
        border-color: {{ section.settings.media_button2_border_color }};
        font-size: {{ section.settings.media_desktop_button_size }}px;
        white-space: nowrap;
      }

      .column--content .text-content-wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
        padding: 80px;
        position: relative;
        z-index: 2;
      }

      .signup-form {
        margin-top: 30px;
        display: flex;
      }

      .signup-form.signup-form--left {
        justify-content: flex-start;
      }

      .signup-form.signup-form--center {
        justify-content: center;
      }

      .signup-form.signup-form--right {
        justify-content: flex-end;
      }

      .signup-form__inline-container {
        max-width: 400px;
        width: 100%;
      }

      .signup-form__email {
        flex-grow: 1;
        padding: 10px;
      }

      .signup-form--left {
        margin-right: auto;
      }

      .signup-form--center {
        margin-left: auto;
        margin-right: auto;
      }

      .signup-form--right {
        margin-left: auto;
      }

      .background-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
      }

      .background-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        background-repeat: no-repeat;
        background-size: cover;
      }


      .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
      }

      .column--content {
        position: relative;
        min-height: {{ section.settings.min_column_height }}px;
      }

      @media (max-width: 768px) {
        .banner-tab {
          width: 40px;
          height: 40px;
        }

        .banner-tab-content {
          min-height: 250px;
        }

        .sub-content {
          height: 250px;
        }
      }

      {% for block in section.blocks %}
        {% case block.type %}
        {% when 'heading' %}
        .block-{{ block.id }}
        .majortitle {
          color: {{ block.settings.heading_color }};
          font-size: {{ block.settings.desktop_font_size }}px;
        }
      {% when 'subheading' %}
      .block-{{ block.id }}
      .subheading {
        color: {{ block.settings.subheading_color }};
        font-size: {{ block.settings.desktop_font_size }}px;
      }
    {% when 'text' %}
    .block-{{ block.id }}
    .rte {
      color: {{ block.settings.text_color }};
      font-size: {{ block.settings.desktop_font_size }}px;
    }
    {% when 'button' %}
    .block-{{ block.id }}
    .btn-1 {
      color: {{ block.settings.button_text_color1 | default: "#ffffff" }};
      background: {{ block.settings.button_bg_color1 | default: "#000000" }};
      border-color: {{ block.settings.button_border_color1 | default: "#000000" }};
      font-size: {{ block.settings.desktop_font_size }}px;
      white-space: nowrap;
    }

    .block-{{ block.id }}
    .btn-2 {
      color: {{ block.settings.button_text_color2 | default: "#ffffff" }};
      background: {{ block.settings.button_bg_color2 | default: "#000000" }};
      border-color: {{ block.settings.button_border_color2 | default: "#000000" }};
      font-size: {{ block.settings.desktop_font_size }}px;
      white-space: nowrap;
    }

    .block-{{ block.id }}
    .button-container {
      justify-content: {{ block.settings.button_alignment }};
    }
    {% endcase %}
    {% endfor %}

    @media (max-width: 767px) {
      .full-width-section .flexible-layout {
        flex-direction: column;
      }

      {% if section.settings.mobile_media_position == 'top' %}
        .column--media {
          order: -1;
        }
      {% else %}
      .column--content {
        order: -1;
      }
    {% endif %}

    .media-column .media-text-wrapper {
      position: static;
      padding: 20px;
    }

    .media-column .majortitle {
      font-size: {{ section.settings.media_mobile_heading_size }}px;
    }

    .media-column .subheading {
      font-size: {{ section.settings.media_mobile_subheading_size }}px;
    }

    .media-column .rte {
      font-size: {{ section.settings.media_mobile_text_size }}px;
    }

    .media-column .btn {
      font-size: {{ section.settings.media_mobile_button_size }}px;
    }

    .button-container {
      flex-wrap: nowrap;
      overflow-x: auto;
      gap: 10px;
      width: 100%;
    }

    .button-container a {
      min-width: max-content;
    }

    .media-overlap__background {
      min-height: 300px;
      {% if section.settings.media_mobile_bg != blank %}
        background-image: url('{{ section.settings.media_mobile_bg | img_url: '1000x' }}') !important;
      {% endif %}
    }

    .column--content .text-content-wrapper {
      padding: 20px;
    }

    .column--content .background-container {
      display: none;
    }

    .column--content {
      background-color: {{ section.settings.content_bg_color }}
       !important;
      {% if section.settings.content_mobile_bg != blank %}
        background-image: url('{{ section.settings.content_mobile_bg | img_url: '1000x' }}') !important;
        background-size: cover;
        background-position: center;
      {% endif %}
    }

    .flexible-layout .column {
      margin-bottom: 0;
    }

    .signup-form__inline-container {
      display: flex;
      flex-direction: column;
    }

    .signup-form__email {
      margin-bottom: 10px;
    }

    {% for block in section.blocks %}
      {% case block.type %}
      {% when 'heading' %}
      .block-{{ block.id }}
      .majortitle {
        font-size: {{ block.settings.mobile_font_size }}px;
      }
    {% when 'subheading' %}
    .block-{{ block.id }}
    .subheading {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
    {% when 'text' %}
    .block-{{ block.id }}
    .rte {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
    {% when 'button' %}
    .block-{{ block.id }}
    .btn {
      font-size: {{ block.settings.mobile_font_size }}px;
      white-space: normal;
    }
    {% endcase %}
    {% endfor %}
    }

    @media (min-width: 768px) {
      .full-width-section .flexible-layout,
      .media-overlap__background,
      .column--content {
        min-height: {{ section.settings.min_section_height }}
        px !important;
      }

      {% if section.settings.show_media_column %}
        .column--media,
        .column--content {
          width: 50% !important;
          flex: 0 0 50% !important;
        }
      {% else %}
      .column--media {
        display: none !important;
      }
      .column--content {
        width: 100% !important;
        flex: 0 0 100% !important;
      }
    {% endif %}

    .column--content {
      background-color: {{ section.settings.content_bg_color }};
      padding: 30px;
      position: relative;
    }

    .flexible-layout .column,
    .fixed-layout .column {
      padding-left: 0;
    }

    .signup-form__inline-container {
      display: flex;
    }

    .column--order-push-desktop {
      order: 1;
    }
    }
{% endstyle %}
