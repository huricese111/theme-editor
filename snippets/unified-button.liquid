{%- comment -%}
  Unified Button Component
  Parameters:
  - text: Button text
  - url: Button link
  - bg_color: Background color
  - text_color: Text color
  - class: Additional CSS class
  - use_arrow: Whether to show arrow (default: true)
  - margin_top: Top margin (px)
  - margin_right: Right margin (px)
  - margin_bottom: Bottom margin (px)
  - margin_left: Left margin (px)
{%- endcomment -%}

{%- assign button_text = text | default: 'Button' -%}
{%- assign button_url = url | default: '#' -%}
{%- assign button_bg_color = bg_color | default: '#000000' -%}
{%- assign button_text_color = text_color | default: '#ffffff' -%}
{%- assign button_class = class | default: '' -%}
{%- assign show_arrow = use_arrow | default: true -%}
{%- assign button_margin_top = margin_top | default: 0 -%}
{%- assign button_margin_right = margin_right | default: 0 -%}
{%- assign button_margin_bottom = margin_bottom | default: 0 -%}
{%- assign button_margin_left = margin_left | default: 0 -%}
{%- assign button_font_size = font_size | default: 14 -%}
{%- assign button_mobile_font_size = mobile_font_size | default: 12 -%}
{%- assign button_border_radius = border_radius | default: 50 -%}
{%- assign button_height = button_height | default: 48 -%}

<a
  href="{{ button_url }}"
  class="unified-button {{ button_class }}"
  style="
    background-color: {{ button_bg_color }}; 
    color: {{ button_text_color }}; 
    margin: {{ button_margin_top }}px {{ button_margin_right }}px {{ button_margin_bottom }}px {{ button_margin_left }}px; 
    font-size: {{ button_font_size }}px; 
    border-radius: {{ button_border_radius }}px; 
    min-height: {{ button_height }}px; 
    height: {{ button_height }}px;
    --button-mobile-font-size: {{ button_mobile_font_size }}px;
    --button-border-radius: {{ button_border_radius }}px;
    --button-height: {{ button_height }}px;
  "
>
  <span class="button-text">{{ button_text }}</span>
  {%- if show_arrow -%}
    <span class="button-arrow">
      {% render 'icon-chevron-right', stroke_width: 2 %}
    </span>
  {%- endif -%}
  <div class="button-shine"></div>
</a>