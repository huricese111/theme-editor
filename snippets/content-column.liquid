<div class="column column--content align-{{ section.settings.content_alignment }}" data-cc-animate>
  <div class="background-container">
    {% if section.settings.content_bg_video != blank %}
      <video
        class="background-video"
        autoplay
        muted
        loop
        playsinline
      >
        <source src="{{ section.settings.content_bg_video }}" type="video/mp4">
      </video>
    {% endif %}

    {% if section.settings.content_bg_image != blank %}
      {{
        section.settings.content_bg_image
        | image_url: width: 2000
        | image_tag: class: 'background-image', loading: 'lazy'
      }}
    {% endif %}
  </div>

  <div class="text-content-wrapper">
    {% for block in section.blocks %}
      <div class="block-{{ block.id }}" {{ block.shopify_attributes }}>
        {% case block.type %}
          {% when 'heading' %}
            {% capture block_title %}
                    {% case locale_prefix %}
                      {% when 'de' %}{{ block.settings.title_de | default: block.settings.title }}
                      {% when 'fr' %}{{ block.settings.title_fr | default: block.settings.title }}
                      {% when 'fi' %}{{ block.settings.title_fi | default: block.settings.title }}
                      {% else %}{{ block.settings.title }}
                    {% endcase %}
                  {% endcapture %}
            {% if block.settings.use_h1 %}
              <h1 class="majortitle in-content" data-format-number>
                {{ block_title | escape }}
              </h1>
            {% else %}
              <h2 class="majortitle in-content h1" data-format-number>
                {{ block_title | escape }}
              </h2>
            {% endif %}

          {% when 'subheading' %}
            {% capture block_subheading %}
                    {% case locale_prefix %}
                      {% when 'de' %}{{ block.settings.subheading_de | default: block.settings.subheading }}
                      {% when 'fr' %}{{ block.settings.subheading_fr | default: block.settings.subheading }}
                      {% when 'fi' %}{{ block.settings.subheading_fi | default: block.settings.subheading }}
                      {% else %}{{ block.settings.subheading }}
                    {% endcase %}
                  {% endcapture %}
            <div class="subheading subheading--over lightish-spaced-row-above" data-format-number>
              {{ block_subheading | escape }}
            </div>

          {% when 'text' %}
            {% capture block_text %}
                    {% case locale_prefix %}
                      {% when 'de' %}{{ block.settings.text_de | default: block.settings.text }}
                      {% when 'fr' %}{{ block.settings.text_fr | default: block.settings.text }}
                      {% when 'fi' %}{{ block.settings.text_fi | default: block.settings.text }}
                      {% else %}{{ block.settings.text }}
                    {% endcase %}
                  {% endcapture %}
            <div
              class="rte lightly-spaced-row {% if block.settings.enlarge_text %}large-text{% endif %}"
              data-format-number
            >
              {{ block_text }}
            </div>

          {% when 'liquid_content' %}
            <div class="custom-liquid-block">
              {{ block.settings.liquid_content }}
            </div>

          {% when 'newsletter' %}
            <div class="signup-form signup-form--{{ block.settings.alignment }}">
              {% form 'customer', id: 'home_newsletter_signup' %}
                {% if form.posted_successfully? %}
                  <div class="signup-form__response signup-form__response--success">
                    <h4>{{ 'newsletter.success' | t }}</h4>
                  </div>
                {% else %}
                  {%- assign form_errors_id = section.id | append: '-error' -%}
                  {%- render 'form-errors', form: form, id: form_errors_id, class: 'inline-block' -%}
                  <input
                    type="hidden"
                    name="contact[tags]"
                    value="{{ block.settings.tags | default: 'prospect,newsletter' }}"
                  >
                  {% capture placeholder_text %}
                          {% case locale_prefix %}
                          {% when 'de' %}{{ block.settings.placeholder_de | default: block.settings.placeholder }}
                            {% when 'fr' %}{{ block.settings.placeholder_fr | default: block.settings.placeholder }}
                              {% when 'fi' %}{{ block.settings.placeholder_fi | default: block.settings.placeholder }}
                                 {% else %}{{ block.settings.placeholder }}
                                {% endcase %}
                              {% endcapture %}
                  {% capture button_text %}
                          {% case locale_prefix %}
                          {% when 'de' %}{{ block.settings.button_text_de | default: block.settings.button_text }}
                            {% when 'fr' %}{{ block.settings.button_text_fr | default: block.settings.button_text }}
                              {% when 'fi' %}{{ block.settings.button_text_fi | default: block.settings.button_text }}
                                {% else %}{{ block.settings.button_text | default: 'Subscribe' }}
                              {% endcase %}
                            {% endcapture %}
                  <div>
                    <div class="signup-form__inline-container">
                      <input
                        type="email"
                        placeholder="{{ placeholder_text | strip }}"
                        class="signup-form__email"
                        value=""
                        name="contact[email]"
                        aria-label="{{ 'newsletter.label' | t }}"
                        {% if form.errors %}
                          autofocus
                          aria-invalid="true"
                          aria-describedby="{{ form_errors_id }}"
                        {%- endif %}
                        required
                        style="
                          background-color: {{ block.settings.input_bg_color }};
                          color: {{ block.settings.input_text_color }};
                        "
                      >
                      <button
                        class="btn signup-form__button"
                        type="submit"
                        style="
                          background: {{ block.settings.button_bg_color }};
                          color: {{ block.settings.button_text_color }};
                          border:none;
                        "
                      >
                        {{- button_text | strip -}}
                      </button>
                    </div>
                  </div>
                {% endif %}
              {% endform %}
            </div>

          {% when 'button' %}
            <div class="button-container lightly-spaced-row">
              {% for i in (1..2) %}
                {% assign button_label_key = 'button_label' %}
                {% assign button_link_key = 'button_link' %}

                {% if i == 2 %}
                  {% assign button_label_key = 'button2_label' %}
                  {% assign button_link_key = 'button2_link' %}
                {% endif %}

                {% assign translated_label_key = button_label_key | append: '_' | append: locale_prefix %}
                {% assign translated_label = block.settings[translated_label_key] %}
                {% assign default_label = block.settings[button_label_key] %}

                {% if translated_label == blank %}
                  {% assign translated_label = default_label -%}
                {%- endif %}

                {% if translated_label != blank and block.settings[button_link_key] != blank %}
                  <a
                    class="btn btn--{{ block.settings.button_style }} button-row__btn {% if i == 1 %}btn-1{% else %}btn-2{% endif %}"
                    href="{{ block.settings[button_link_key] }}"
                    style="color: {% if i == 1 %}{{ block.settings.button_text_color1 }}{% else %}{{ block.settings.button_text_color2 }}{% endif %}; background: {% if i == 1 %}{{ block.settings.button_bg_color1 }}{% else %}{{ block.settings.button_bg_color2 }}{% endif %}; border-color: {% if i == 1 %}{{ block.settings.button_border_color1 }}{% else %}{{ block.settings.button_border_color2 }}{% endif %};"
                  >
                    {{- translated_label | escape -}}
                  </a>
                {% endif %}
              {% endfor %}
            </div>

          {% when 'bike_tab' %}
            {% style %}
              .banner-header {
                display: flex;
                flex-direction: column;
                align-items: flex-end;
                position: absolute;
                top: 0;
                right: 0;
                z-index: 10;
                padding: 15px;
              }

              .sub-tabs-container {
                display: flex;
                justify-content: flex-end;
                width: 100%;
              }
              .banner-tab-content {
                position: relative;
                min-height: 300px;
              }

              .sub-content {
                position: relative;
                height: 300px;
              }

              .sub-content-item {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-size: contain;
                background-position: center;
                background-repeat: no-repeat;
                display: none;
              }

              .sub-content-item.active {
                display: block;
              }

              .banner-tabs {
                display: flex;
                gap: 8px;
                margin-bottom: 5px;
              }

              .banner-tab {
                align-items: center;
                justify-content: center;
                padding: 6px 10px;
                background-color: white;
                margin-left: 5px;
                border-radius: 50px;
                transition: background-color 0.3s;
                white-space: nowrap;
                cursor: pointer;
                color: black;
                min-width: 60px;
                max-height: 40px;
                display: flex;
              }

              .banner-tab.active,
              .banner-tab:hover {
                background-color: #dedede;
              }

              .sub-tabs-container {
                display: flex;
                justify-content: flex-end;
                width: 100%;
              }

              .sub-tabs {
                display: flex;
                gap: 6px;
                justify-content: flex-end;
                margin-top: 5px;
              }

              .sub-tab {
                padding: 10px;
                margin-left: 5px;
                border-radius: 24px;
                cursor: pointer;
                transition: background-color 0.3s;
                min-width: 40px;
                height: 40px;
                align-items: center;
                justify-content: center;
                position: relative;
              }

              .sub-tab.active::before {
                content: '\2713 ';
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                color: black;
                font-weight: bold;
              }

              .banner-content {
                display: none;
              }

              .banner-content.active {
                display: block;
              }

              .sub-tabs-group {
                display: none;
              }

              .sub-tabs-group.active {
                display: block;
              }
            {% endstyle %}

            {% assign show_main_tabs = block.settings.show_main_tabs | default: true %}
            {% assign show_sub_tabs = block.settings.show_sub_tabs | default: true %}

            <div class="bike-tabs-block" id="block-{{ block.id }}">
              <div class="banner-header">
                {% if show_main_tabs %}
                  <div class="banner-tabs">
                    {% for i in (1..3) %}
                      {% assign tab_type_key = 'tab_' | append: i | append: '_type' %}
                      {% assign tab_type = block.settings[tab_type_key] %}
                      {% if tab_type != blank %}
                        <div
                          class="banner-tab {% if forloop.first %}active{% endif %}"
                          data-tab-id="tab-{{ block.id }}-{{ i }}"
                          data-block-id="block-{{ block.id }}"
                          data-tab-index="{{ i }}"
                        >
                          {% case tab_type %}
                            {% when 'step_through' %}
                              <img
                                src="https://cdn.shopify.com/s/files/1/0560/0080/6985/files/noun-frame-bicycle-4002006_5.png?v=1708600271"
                                alt="Step Through"
                                height="30px"
                                width="30px"
                              >
                            {% when 'high_step' %}
                              <img
                                src="https://cdn.shopify.com/s/files/1/0560/0080/6985/files/noun-frame-bicycle-4002006_6.png?v=1708600271"
                                alt="High Step"
                                height="30px"
                                width="30px"
                              >
                            {% when 'low_step' %}
                              <img
                                src="https://cdn.shopify.com/s/files/1/0560/0080/6985/files/noun-frame-bicycle-4002006_4.png?v=1708600271"
                                alt="Low Step"
                                height="30px"
                                width="30px"
                              >
                          {% endcase %}
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}

                {% if show_sub_tabs %}
                  <div class="sub-tabs-container">
                    {% for i in (1..3) %}
                      {% assign tab_type_key = 'tab_' | append: i | append: '_type' %}
                      {% assign tab_type = block.settings[tab_type_key] %}
                      {% if tab_type != blank %}
                        <div
                          class="sub-tabs-group {% if forloop.first %}active{% endif %}"
                          data-tab-group="tab-{{ block.id }}-{{ i }}"
                        >
                          <div class="sub-tabs">
                            {% for j in (1..4) %}
                              {% assign bg_color_key = 'tab_'
                                | append: i
                                | append: '_sub_tab_'
                                | append: j
                                | append: '_bg_color'
                              %}
                              {% assign bg_color = block.settings[bg_color_key] %}
                              {% if bg_color != blank %}
                                <div
                                  class="sub-tab {% if forloop.first %}active{% endif %}"
                                  style="background-color: {{ bg_color }};"
                                  data-subtab-id="subtab-{{ block.id }}-{{ i }}-{{ j }}"
                                  data-parent-tab="tab-{{ block.id }}-{{ i }}"
                                  data-block-id="block-{{ block.id }}"
                                ></div>
                              {% endif %}
                            {% endfor %}
                          </div>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}
              </div>

              <div class="banner-tab-content">
                {% for i in (1..3) %}
                  {% assign tab_type_key = 'tab_' | append: i | append: '_type' %}
                  {% assign tab_type = block.settings[tab_type_key] %}
                  {% if tab_type != blank %}
                    <div
                      id="tab-{{ block.id }}-{{ i }}"
                      class="banner-content {% if forloop.first %}active{% endif %}"
                    >
                      <div class="sub-content">
                        {% for j in (1..4) %}
                          {% assign image_key = 'tab_'
                            | append: i
                            | append: '_sub_tab_'
                            | append: j
                            | append: '_image'
                          %}
                          {% assign image = block.settings[image_key] %}
                          {% if image != blank %}
                            <div
                              id="subtab-{{ block.id }}-{{ i }}-{{ j }}"
                              class="sub-content-item {% if forloop.first %}active{% endif %}"
                              style="background-image: url('{{ image | img_url: '800x' }}');"
                            >
                              <a
                                href="{{ block.settings.footer_button_url }}"
                                class="sub-content-link"
                                aria-label="{{ 'View product' | t }}"
                              ></a>
                            </div>
                          {% endif %}
                        {% endfor %}
                      </div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>

            <script>
              document.addEventListener('DOMContentLoaded', function () {
                function initBikeTabs(blockId) {
                  const blockElement = document.getElementById(blockId);
                  if (!blockElement) return;

                  const firstTab = blockElement.querySelector('.banner-tab');
                  if (firstTab) {
                    firstTab.dispatchEvent(new Event('click'));
                  } else if (!blockElement.querySelector('.show_main_tabs')) {
                    const firstContent = blockElement.querySelector('.banner-content');
                    if (firstContent) firstContent.classList.add('active');
                  }

                  if (!blockElement.querySelector('.show_sub_tabs')) {
                    blockElement.querySelectorAll('.banner-content').forEach((content) => {
                      const firstSubItem = content.querySelector('.sub-content-item');
                      if (firstSubItem) firstSubItem.classList.add('active');
                    });
                  }
                }

                document.querySelectorAll('.banner-tab').forEach((tab) => {
                  tab.addEventListener('click', function () {
                    const blockId = this.dataset.blockId;
                    const tabId = this.dataset.tabId;
                    const tabIndex = this.dataset.tabIndex;
                    const blockElement = document.getElementById(blockId);

                    blockElement.querySelectorAll('.banner-tab').forEach((t) => {
                      t.classList.remove('active');
                    });
                    this.classList.add('active');

                    blockElement.querySelectorAll('.banner-content').forEach((c) => {
                      c.classList.remove('active');
                    });

                    const content = blockElement.querySelector(`#${tabId}`);
                    if (content) content.classList.add('active');

                    if (blockElement.querySelector('.sub-tabs-container')) {
                      blockElement.querySelectorAll('.sub-tabs-group').forEach((group) => {
                        group.classList.remove('active');
                      });

                      const currentTabGroup = blockElement.querySelector(`.sub-tabs-group[data-tab-group="${tabId}"]`);
                      if (currentTabGroup) {
                        currentTabGroup.classList.add('active');

                        const firstSubTab = currentTabGroup.querySelector('.sub-tab');
                        if (firstSubTab) firstSubTab.dispatchEvent(new Event('click'));
                      }
                    }
                  });
                });

                document.querySelectorAll('.sub-tab').forEach((subTab) => {
                  subTab.addEventListener('click', function () {
                    const blockId = this.dataset.blockId;
                    const subtabId = this.dataset.subtabId;
                    const parentTabId = this.dataset.parentTab;
                    const blockElement = document.getElementById(blockId);

                    const subTabGroup = blockElement.querySelector(`.sub-tabs-group[data-tab-group="${parentTabId}"]`);
                    if (subTabGroup) {
                      subTabGroup.querySelectorAll('.sub-tab').forEach((st) => {
                        st.classList.remove('active');
                      });
                    }

                    this.classList.add('active');

                    const parentContent = blockElement.querySelector(`#${parentTabId}`);
                    if (parentContent) {
                      parentContent.querySelectorAll('.sub-content-item').forEach((item) => {
                        item.classList.remove('active');
                      });

                      const contentItem = parentContent.querySelector(`#${subtabId}`);
                      if (contentItem) contentItem.classList.add('active');
                    }
                  });
                });

                document.querySelectorAll('.bike-tabs-block').forEach((block) => {
                  initBikeTabs(block.id);
                });
              });
            </script>

          {%- when 'feature_column' -%}
            <style>
              .columns-container-{{ block.id }} {
                display: grid;
                grid-template-columns: repeat({{ block.settings.columns_count | default: 4 }}, 1fr);
                gap: 15px;
                margin-top: 15px;
              }

              .column-item {
                text-align: center;
                padding: 10px;
                background-color: rgba(255, 255, 255, 0.8);
                border-radius: 6px;
              }

              .columns-container-{{ block.id }} .column-title {
                color: {{ block.settings.column_title_color }};
                font-size: {{ block.settings.column_title_size_desktop }}px;
                margin-bottom: 5px;
                font-weight: bold;
              }

              .columns-container-{{ block.id }} .column-description {
                color: {{ block.settings.column_description_color }};
                font-size: {{ block.settings.column_description_size_desktop }}px;
                line-height: 1.4;
              }

              @media (max-width: 768px) {
                .columns-container-{{ block.id }} {
                  grid-template-columns: {% if block.settings.columns_count > 1 %}repeat(2, 1fr){% else %}1fr{% endif %};
                  gap: 10px;
                }

                .columns-container-{{ block.id }} .column-title {
                  font-size: {{ block.settings.column_title_size_mobile }}px;
                }

                .columns-container-{{ block.id }} .column-description {
                  font-size: {{ block.settings.column_description_size_mobile }}px;
                }
              }
            </style>

            <div class="columns-container-{{ block.id }}">
              {%- for i in (1..4) -%}
                {%- assign title_setting = 'column_' | append: i | append: '_title' -%}
                {%- assign title = block.settings[title_setting] -%}

                {%- assign description_setting = 'column_' | append: i | append: '_description' -%}
                {%- assign description = block.settings[description_setting] -%}

                {%- if title != blank or description != blank -%}
                  <div class="column-item">
                    {%- if title != blank -%}
                      <h3 class="column-title">
                        {%- assign title_de_setting = 'column_' | append: i | append: '_title_de' -%}
                        {%- assign title_fr_setting = 'column_' | append: i | append: '_title_fr' -%}
                        {%- assign title_fi_setting = 'column_' | append: i | append: '_title_fi' -%}

                        {%- case locale_prefix -%}
                          {%- when 'de' -%}
                            {{ block.settings[title_de_setting] | default: title }}
                          {%- when 'fr' -%}
                            {{ block.settings[title_fr_setting] | default: title }}
                          {%- when 'fi' -%}
                            {{ block.settings[title_fi_setting] | default: title }}
                          {%- else -%}
                            {{ title }}
                        {%- endcase -%}
                      </h3>
                    {%- endif -%}

                    {%- if description != blank -%}
                      <div class="column-description">
                        {%- assign description_de_setting = 'column_' | append: i | append: '_description_de' -%}
                        {%- assign description_fr_setting = 'column_' | append: i | append: '_description_fr' -%}
                        {%- assign description_fi_setting = 'column_' | append: i | append: '_description_fi' -%}

                        {%- case locale_prefix -%}
                          {%- when 'de' -%}
                            {{ block.settings[description_de_setting] | default: description }}
                          {%- when 'fr' -%}
                            {{ block.settings[description_fr_setting] | default: description }}
                          {%- when 'fi' -%}
                            {{ block.settings[description_fi_setting] | default: description }}
                          {%- else -%}
                            {{ description }}
                        {%- endcase -%}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>

          {%- when 'slide_footer' -%}
            <style>
              .slide-footer-{{ block.id }} {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 10px;
                background-color: rgba(255, 255, 255, 0.9);
                border-radius: 6px;
                margin-top: 15px;
              }

              .footer-title {
                color: {{ block.settings.footer_title_color }};
                font-size: {{ block.settings.footer_title_size_desktop }}px;
                margin-bottom: 3px;
                font-weight: bold;
              }

              .footer-description {
                color: {{ block.settings.footer_description_color }};
                font-size: {{ block.settings.footer_description_size_desktop }}px;
                line-height: 1.3;
              }

              .footer-button-{{ block.id }} {
                padding: 8px 16px;
                border-radius: 20px;
                text-decoration: none;
                font-weight: bold;
                transition: all 0.3s ease;
                background-color: {{ block.settings.button_bg_color }};
                color: {{ block.settings.button_text_color }} !important;
                font-size: {{ block.settings.button_font_size_desktop }}px;
                white-space: nowrap;
              }

              .footer-button-{{ block.id }}:hover {
                opacity: 0.9;
                transform: translateY(-1px);
              }

              @media (max-width: 768px) {
                .slide-footer-{{ block.id }} {
                  flex-direction: column;
                  gap: 10px;
                  align-items: stretch;
                }

                .footer-title {
                  font-size: {{ block.settings.footer_title_size_mobile }}px;
                }

                .footer-description {
                  font-size: {{ block.settings.footer_description_size_mobile }}px;
                }

                .footer-button-{{ block.id }} {
                  font-size: {{ block.settings.button_font_size_mobile }}px;
                  text-align: center;
                  width: 100%;
                }
              }
            </style>

            <div class="slide-footer-{{ block.id }}">
              <div class="footer-left">
                {%- if block.settings.footer_title != blank or block.settings.rrp_price != blank -%}
                  <h3 class="footer-title">
                    {%- if block.settings.rrp_price != blank -%}
                      {%- assign price_value = block.settings.rrp_price | times: 100 | money -%}
                      {%- case locale_prefix -%}
                        {%- when 'de' -%}
                          Ab {{ price_value }}
                        {%- when 'fr' -%}
                          À partir de {{ price_value }}
                        {%- when 'fi' -%}
                          Alkaen {{ price_value }}
                        {%- else -%}
                          From {{ price_value }}
                      {%- endcase -%}
                    {%- else -%}
                      {%- case locale_prefix -%}
                        {%- when 'de' -%}
                          {{ block.settings.footer_title_de | default: block.settings.footer_title }}
                        {%- when 'fr' -%}
                          {{ block.settings.footer_title_fr | default: block.settings.footer_title }}
                        {%- when 'fi' -%}
                          {{ block.settings.footer_title_fi | default: block.settings.footer_title }}
                        {%- else -%}
                          {{ block.settings.footer_title }}
                      {%- endcase -%}
                    {%- endif -%}
                  </h3>
                {%- endif -%}

                {%- if block.settings.footer_description != blank -%}
                  <div class="footer-description">
                    {%- case locale_prefix -%}
                      {%- when 'de' -%}
                        {{ block.settings.footer_description_de | default: block.settings.footer_description }}
                      {%- when 'fr' -%}
                        {{ block.settings.footer_description_fr | default: block.settings.footer_description }}
                      {%- when 'fi' -%}
                        {{ block.settings.footer_description_fi | default: block.settings.footer_description }}
                      {%- else -%}
                        {{ block.settings.footer_description }}
                    {%- endcase -%}
                  </div>
                {%- endif -%}
              </div>

              {%- if block.settings.footer_button_url != blank and block.settings.footer_button_text != blank -%}
                <div class="footer-right">
                  <a
                    class="footer-button-{{ block.id }}"
                    href="{{ block.settings.footer_button_url }}"
                  >
                    {%- case locale_prefix -%}
                      {%- when 'de' -%}
                        {{ block.settings.footer_button_text_de | default: block.settings.footer_button_text }}
                      {%- when 'fr' -%}
                        {{ block.settings.footer_button_text_fr | default: block.settings.footer_button_text }}
                      {%- when 'fi' -%}
                        {{ block.settings.footer_button_text_fi | default: block.settings.footer_button_text }}
                      {%- else -%}
                        {{ block.settings.footer_button_text }}
                    {%- endcase -%}
                    &rarr;
                  </a>
                </div>
              {%- endif -%}
            </div>

          {% when 'countdown' %}
            <script src="{{ 'countdown-timer.js' | asset_url }}" defer></script>
            {% style %}
              .block-id-{{ block.id }} .countdown {
                --countdown-desktop-size: {{ block.settings.number_size }}px;
              }

              .block-id-{{ block.id }}
              .countdown-timer__number {
                color: {{ block.settings.countdown_number_color }};
              }

              .block-id-{{ block.id }}
              .countdown-timer__label {
                color: {{ block.settings.countdown_label_color }};
              }
            {% endstyle %}

            <div class="block-id-{{ block.id }} lightly-spaced-row lightish-spaced-row-above countdown-font-{{ block.settings.number_font }} countdown-divider-{{ block.settings.divider_type }}">
              {% assign days_text = 'days' %}
              {% assign hours_text = 'hours' %}
              {% assign minutes_text = 'minutes' %}
              {% assign seconds_text = 'seconds' %}

              {% case locale_prefix %}
                {% when 'de' %}
                  {% assign days_text = 'Tage' %}
                  {% assign hours_text = 'Stunden' %}
                  {% assign minutes_text = 'Minuten' %}
                  {% assign seconds_text = 'Sekunden' %}
                {% when 'fr' %}
                  {% assign days_text = 'jours' %}
                  {% assign hours_text = 'heures' %}
                  {% assign minutes_text = 'minutes' %}
                  {% assign seconds_text = 'secondes' %}
                {% when 'fi' %}
                  {% assign days_text = 'päivää' %}
                  {% assign hours_text = 'tuntia' %}
                  {% assign minutes_text = 'minuuttia' %}
                  {% assign seconds_text = 'sekuntia' %}
              {% endcase %}

              {% render 'countdown-timer',
                end_date: block.settings.end_date,
                end_time: block.settings.end_time,
                end_text: block.settings.end_text,
                end_midnight: true,
                hide_on_end: block.settings.hide_on_end,
                show_labels: block.settings.show_timer_labels,
                days_text: days_text,
                hours_text: hours_text,
                minutes_text: minutes_text,
                seconds_text: seconds_text
              %}
            </div>
        {% endcase %}
      </div>
    {% endfor %}
  </div>
</div>