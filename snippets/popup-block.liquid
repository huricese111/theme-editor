    }
    
    .popup-title {
      font-size: 14px;
      padding-right: 0.3rem;
      line-height: 1.2;
    }
    
    .popup-close {
      width: 26px;
      height: 26px;
      right: 0.3rem;
    }
    
    .popup-content {
      padding: 0.5rem;
      max-height: calc(90vh - 70px);
      overflow-y: auto;
      overflow-x: hidden;
      -webkit-overflow-scrolling: touch;
    }
    
    .popup-products-grid {
      grid-template-columns: 1fr !important;
