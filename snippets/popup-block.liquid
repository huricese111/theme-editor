{%- if block.settings.page != blank or block.settings.enable_product_display -%}
  {%- assign locale_iso = request.locale.iso_code | downcase -%}
  {%- assign default_text = block.settings.text | escape -%}

  {%- if locale_iso == 'de' and block.settings.text_de != blank -%}
    {%- assign button_text = block.settings.text_de | escape -%}
  {%- elsif locale_iso == 'fr' and block.settings.text_fr != blank -%}
    {%- assign button_text = block.settings.text_fr | escape -%}
  {%- elsif locale_iso == 'fi' and block.settings.text_fi != blank -%}
    {%- assign button_text = block.settings.text_fi | escape -%}
  {%- else -%}
    {%- assign button_text = default_text -%}
  {%- endif -%}

  <div
    class="custom-popup-container{% unless block.settings.show_in_quickbuy %} not-in-quickbuy{% endunless %}"
    {{ block.shopify_attributes }}
  >
    <button
      type="button"
      class="{% if block.settings.style != 'link' %}btn btn--{{ block.settings.style }}{% else %}small-feature-link{% endif %} popup-trigger"
      data-popup-target="popup-{{ block.id }}"
    >
      {{ button_text }}
    </button>
    <a href="{{ block.settings.page.url }}" class="link js-hidden">{{ button_text }}</a>

    <!-- Popup Dialog Structure -->
    <div id="popup-{{ block.id }}" class="popup-overlay">
      <div class="popup-window{% if block.settings.enable_product_display %} popup-window--with-products{% endif %}">
        <div class="popup-content">
          {% if button_text and button_text != blank %}
            <div class="popup-header">
              <h2 class="popup-title">{{ button_text }}</h2>
            </div>
          {% endif %}
          {%- if block.settings.page != blank -%}
            <div class="popup-page-content">
              {{ block.settings.page.content }}
            </div>
          {%- endif -%}
          
          {%- assign has_products = false -%}
          {%- if block.settings.selected_products != blank -%}
            {%- for product in block.settings.selected_products -%}
              {%- assign has_products = true -%}
              {%- break -%}
            {%- endfor -%}
          {%- endif -%}
          
          {%- if block.settings.enable_product_display and has_products -%}
            <div class="popup-products-section">
              <div class="popup-products-grid">
                {%- for product in block.settings.selected_products -%}
                  {%- if product != blank -%}
                    {%- assign product_url = product.url -%}
                    <div class="popup-product-block">
                      <div class="popup-product-inner">
                        {%- if product.featured_media -%}
                          <div class="popup-image-cont">
                            <a class="popup-product-link" href="{{ product_url }}">
                              <div class="popup-image-label-wrap">
                                <div class="popup-product-image">
                                  <img 
                                    src="{{ product.featured_media | image_url: width: 600 }}" 
                                    alt="{{ product.title | escape }}"
                                    width="600"
                                    height="600"
                                    loading="lazy"
                                    class="popup-product-img"
                                  >
                                </div>
                              </div>
                            </a>
                          </div>
                        {%- else -%}
                          <div class="popup-image-cont">
                            <div class="popup-placeholder-image">{{ 'product-1' | placeholder_svg_tag }}</div>
                          </div>
                        {%- endif -%}

                        <div class="popup-product-detail">
                          <div class="popup-inner">
                            <div class="popup-innerer">
                              <a class="popup-product-link" href="{{ product_url }}" target="_blank">
                                <div class="popup-productcard-left">

                                  <div class="popup-product-title">
                                    {{ product.title | escape }}
                                  </div>
                                  
                                  {%- assign motor_torque = product.metafields.custom.motor_torque_2.value | default: '' -%}
                                  {%- assign battery_capacity = product.metafields.custom.battery_capacity.value | default: '' -%}
                                  {%- assign display_size = product.metafields.custom.display_size.value | default: '' -%}
                                  
                                  {%- if motor_torque != blank or battery_capacity != blank or display_size != blank -%}
                                    <div class="popup-product-specs">
                                      {% case request.locale.iso_code %}
                                        {% when 'de' %}
                                          {{ motor_torque }} Motor / {{ battery_capacity }} Akku / {{ display_size }} Display
                                        {% when 'fr' %}
                                          Moteur {{ motor_torque }} / Batterie {{ battery_capacity }} / Écran {{ display_size }}
                                        {% when 'fi' %}
                                          {{ motor_torque }} Moottori / {{ battery_capacity }} Akku / {{ display_size }} Näyttö
                                        {% else %}
                                          {{ motor_torque }} Motor / {{ battery_capacity }} Battery / {{ display_size }} Display
                                      {% endcase %}
                                    </div>
                                  {%- endif -%}
                                  
                                  {%- if block.settings.show_product_prices -%}
                                    <div class="popup-product-price">
                                      {%- if product.compare_at_price > product.price -%}
                                        <span class="popup-price-sale">{{ product.price | money }}</span>
                                        <span class="popup-price-compare">{{ product.compare_at_price | money }}</span>
                                      {%- else -%}
                                        <span class="popup-price-regular">{{ product.price | money }}</span>
                                      {%- endif -%}
                                    </div>
                                  {%- endif -%}
                                  
                                  {%- if localization.country.iso_code == 'FR' and product.metafields.custom.alma_financing.value -%}
                                    <div class="popup-financing">
                                      {% case request.locale.iso_code %}
                                        {% when 'fr' %}
                                          4x {{ product.metafields.custom.alma_financing.value }} € sans frais
                                        {% else %}
                                          4x €{{ product.metafields.custom.alma_financing.value }}, 0% interest
                                      {% endcase %}
                                    </div>
                                  {%- endif -%}
                                </div>
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
          {%- endif -%}
        </div>
        <button type="button" class="popup-close" aria-label="Close">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 4L4 12M4 4L12 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const popupTriggers = document.querySelectorAll('.popup-trigger');
      
      popupTriggers.forEach(trigger => {
        const targetId = trigger.getAttribute('data-popup-target');
        let popup = document.getElementById(targetId);
        
        if (popup) {
          // 将弹窗移动到body的直接子元素，避免被父容器遮挡
          document.body.appendChild(popup);
          
          trigger.addEventListener('click', function() {
            popup.classList.add('popup-active');
            document.body.style.overflow = 'hidden';
          });
          
          const closeBtn = popup.querySelector('.popup-close');
          if (closeBtn) {
            closeBtn.addEventListener('click', function() {
              popup.classList.remove('popup-active');
              document.body.style.overflow = '';
            });
          }
          
          popup.addEventListener('click', function(e) {
            if (e.target === popup) {
              popup.classList.remove('popup-active');
              document.body.style.overflow = '';
            }
          });
          
          document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && popup.classList.contains('popup-active')) {
              popup.classList.remove('popup-active');
              document.body.style.overflow = '';
            }
          });
        }
      });
    });
  </script>
{%- endif -%}

<style>
  .custom-popup-container {
    margin: 1rem 0;
  }
  
  .popup-trigger {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .popup-trigger:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 999999999 !important;
  }
  
  .popup-overlay.popup-active {
    opacity: 1;
    visibility: visible;
  }
  
  .popup-window {
    position: relative;
    background: #ffffff;
    border-radius: 12px;
    width: auto;
    min-width: 400px;
    max-width: 90vw;
    max-height: 85vh;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: scale(0.95);
  }
  
  .popup-close {
    position: absolute;
    top: 12px;
    right: 12px;
    background: rgba(0, 0, 0, 0.5);
    border: none;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    z-index: 10;
    color: white;
    font-size: 18px;
  }
  
  .popup-header {
    padding: 1rem;
    border-bottom: none;
    margin-bottom: 0.5rem;
    flex-shrink: 0;
    position: relative;
  }
  
  .popup-title {
    font-size: 16px;
    font-weight: 600;
    color: #1f2937;
    text-align: center;
    margin: 0;
    word-wrap: break-word;
    line-height: 1.4;
  }
  
  .popup-close {
    position: absolute;
    top: 30px;
    right: 0.5rem;
    transform: translateY(-50%);
    background: #39393a;
    border: none;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    z-index: 10;
  }
  
  .popup-content {
    padding: 0.8rem;
    overflow-y: auto;
    max-height: calc(90vh - 20px);
    display: flex;
    flex-direction: column;
  }

  .popup-products-section {
    margin-top: 0;
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 0;
  }

  .popup-products-grid {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row | default: 2 }}, 1fr);
    gap: 0.4rem;
    margin-top: 0;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    flex: 1;
    min-height: 0;
    justify-content: center;
  }
  
  .popup-product-block {
    position: relative;
    background: #ffffff;
    border-radius: 6px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: 1px solid #e5e7eb;
    width: 100%;
    max-width: 350px;
    margin: 0 auto;
    height: auto;
    display: flex;
    flex-direction: column;
    min-height: 280px;
  }
  
  .popup-image-cont {
    position: relative;
    overflow: hidden;
    background-color: rgba(240, 240, 240, 0.05);
    height: 220px;
    flex-shrink: 0;
  }
  
  .popup-product-detail {
    padding: 0.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .popup-product-title {
    font-size: 15px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.2rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color:#000000;
  }
  
  .popup-product-specs {
    font-size: 11px;
    line-height: 1.2;
    color: #666;
    margin-bottom: 0.3rem;
  }
  
  .popup-product-price {
    font-size: 13px;
    font-weight: 700;
    color: #000000;
  }
  
  /* 响应式设计 */
  @media (max-width: 768px) {
    .popup-window {
      width: 95vw;
      min-width: 320px;
      max-width: 95vw;
      max-height: 92vh;
    }
    
    .popup-window--with-products {
      width: 96vw;
      min-width: 340px;
      max-width: 96vw;
      max-height: 92vh;
    }
    
    .popup-header {
      padding: 0.4rem 2.5rem 0.4rem 0.8rem;
      margin-bottom: 0.3rem;
    }
    
    .popup-title {
      font-size: 15px;
      padding-right: 0.5rem;
      line-height: 1.3;
    }
    
    .popup-close {
      width: 28px;
      height: 28px;
      right: 0.4rem;
    }
    
    .popup-content {
      padding: 0.6rem;
      max-height: calc(88vh - 80px);
      overflow-y: auto;
      overflow-x: hidden;
      -webkit-overflow-scrolling: touch;
    }
    
    .popup-products-grid {
      grid-template-columns: 1fr !important;
      gap: 1rem;
      padding: 0;
      align-items: stretch;
    }
    
    .popup-product-block {
      max-width: 100%;
      width: 100%;
      min-height: 380px;
      margin: 0;
    }
    
    .popup-image-cont {
      height: 280px;
      flex-shrink: 0;
      min-height: 280px;
    }
    
    .popup-product-detail {
      padding: 0.6rem;
      flex-grow: 1;
      min-height: 100px;
    }
    
    .popup-product-title {
      font-size: 15px;
      line-height: 1.3;
      margin-bottom: 0.3rem;
    }
    
    .popup-product-specs {
      font-size: 12px;
      line-height: 1.2;
      margin-bottom: 0.4rem;
    }
    
    .popup-product-price {
      font-size: 13px;
      margin-top: auto;
      font-weight: 600;
    }
  }
  
  @media (max-width: 480px) {
    .popup-window {
      width: 98vw;
      min-width: 280px;
      max-width: 98vw;
      max-height: 94vh;
    }
    
    .popup-window--with-products {
      width: 99vw;
      min-width: 300px;
      max-width: 99vw;
      max-height: 94vh;
    }
    
