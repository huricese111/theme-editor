{% assign discounts = product.metafields.custom %}

<div class="discount-container">
  <div class="discount-images">
    {% if product.metafields.custom.discount_image %}
      <div class="discount-image">
        <img
          src="{{ product.metafields.custom.discount_image | file_url }}"
          alt="{{ product.title }}"
          loading="lazy"
        >
      </div>
    {% endif %}
    
    {% if product.metafields.custom.discount_image2 %}
      <div class="discount-image">
        <img
          src="{{ product.metafields.custom.discount_image2 | file_url }}"
          alt="{{ product.title }}"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>

  <div class="discount-labels">
    {% if discounts.discount_2 %}
      {% assign show_discount_2 = true %}
      
      {% assign discount_2_lower = discounts.discount_2 | downcase %}
      {% if discount_2_lower contains 'free insurance' or discount_2_lower contains 'gratis versicherung' or discount_2_lower contains 'assurance gratuite' %}
        {% if localization.country.iso_code == 'FR' or localization.country.iso_code == 'AT' %}
          {% assign show_discount_2 = false %}
        {% endif %}
      {% endif %}
      
      {% if show_discount_2 %}
        <div class="discount-label">{{ discounts.discount_2 }}</div>
      {% endif %}
    {% endif %}

    {% if discounts.discount_3 %}
      <div class="discount-label">{{ discounts.discount_3 }}</div>
    {% endif %}

    {% if discounts.discount %}
      <div class="discount-label">{{ discounts.discount }}</div>
    {% endif %}
  </div>
</div>

<style>
  .discount-container {
    position: absolute;
    top: 10px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    pointer-events: none;
    z-index: 100;
  }

  .discount-images {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 5px;
    margin-left: 10px;
  }

  .discount-image {
    max-width: 120px;
    max-height: 60px;
    pointer-events: auto;
  }

  .discount-image img {
    width: 100%;
    height: auto;
    max-height: 60px;
    object-fit: contain;
    display: block;
  }

  .discount-labels {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 8px;
    margin-right: 10px;
    flex-wrap: nowrap;
  }

  .discount-label {
    font-size: 12px;
    background-color: #ffd200;
    color: black;
    padding: 5px 10px;
    font-weight: bold;
    white-space: nowrap;
    border-radius: 5px;
    pointer-events: auto;
  }

  @media (max-width: 768px) {
    .discount-container {
      top: 5px;
    }
    
    .discount-images {
      margin-left: 5px;
    }
    
    .discount-image {
      max-width: 80px;
      max-height: 40px;
    }
    
    .discount-image img {
      max-height: 40px;
    }
    
    .discount-labels {
      margin-right: 5px;
      flex-direction: column;
      gap: 5px;
      align-items: flex-end;
    }
    
    .discount-label {
      font-size: 10px;
      padding: 3px 6px;
    }
  }
</style>