<div class="product-container">
  <div class="product-container-left">
    <h5 style="font-size: 14px;line-height: 14px;">
      {% if request.locale.iso_code == 'de' %}
        {{- block.settings.text_de | escape -}}
      {% elsif request.locale.iso_code == 'fr' %}
        <div style="font-size: 12px;line-height: 12px;">{{- block.settings.text_fr | escape -}}</div>
      {% elsif request.locale.iso_code == 'fi' %}
        <div style="font-size: 12px;line-height: 12px;">{{- block.settings.text_fi | escape -}}</div>
      {% else %}
        {{- block.settings.text | escape -}}
      {% endif %}
    </h5>
    <div class="customprices">
      <span class="current-price theme-money">
        {% if request.locale.iso_code == 'de' %}
          {{- block.settings.currentprice_de | escape -}}
        {% elsif request.locale.iso_code == 'fr' %}
          {{- block.settings.currentprice_fr | escape -}}
        {% elsif request.locale.iso_code == 'fi' %}
          {{- block.settings.currentprice_fi | escape -}}
        {% else %}
          {{- block.settings.currentprice | escape -}}
        {% endif %}
      </span>
      <span class="was-price theme-money">
        {% if request.locale.iso_code == 'de' %}
          {{- block.settings.wasprice_de | escape -}}
        {% elsif request.locale.iso_code == 'fr' %}
          {{- block.settings.wasprice_fr | escape -}}
        {% elsif request.locale.iso_code == 'fi' %}
          {{- block.settings.wasprice_fi | escape -}}
        {% else %}
          {{- block.settings.wasprice | escape -}}
        {% endif %}
      </span>
    </div>
  </div>

  <div class="product-container-right">
    <a href="{{ block.settings.url}}" class="buy-now-btn">
      {{- 'ebike.learn_more' | t -}}
    </a>
  </div>
</div>

<style>
  .product-container {
    background-color: #f0f0f0;
    padding: 20px;
    border-radius: 8px;
    text-align: left;
    width: 100%;
    margin: 20px auto;
    display: flex;
    justify-content: space-between;
  }

  .customprice {
    margin: 0;
  }

  .buy-now-btn {
    display: inline-block;
    margin-top: 15px;
    padding: 6px 10px;
    background-color: #000000;
    color: white;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    font-size: 14px;
    white-space: nowrap;
  }
  .buy-now-btn:hover {
    background-color: #0056b3;
  }
</style>
