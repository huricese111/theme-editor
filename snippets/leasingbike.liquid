<style>
        .disclosure {
          background: #ecf0f1;
      }
  .disclosure__title h3{
    font-size:16px;
  }
        .disclosure__title:before, .disclosure__title:after {
          right: 20px;
      }
      .product-info-accordion .disclosure__title {
        padding-left: 20px;
    }
    .disclosure__content {
      padding: 20px;
  }
        .js .disclosure[open]:not(.is-closing) .disclosure__content {
          padding: 20px;
      }
          .leasingcontent {
              display: flex;
              flex-direction: column;
              align-items: flex-start;
              margin-bottom: 50px;
          }

          .leasingpannel {
              background: #ecf0f1 !important;
          }

          .leasingtitle h3 {
              font-size: 16px !important;
          }

          .leasingcontent img {
              margin-bottom: 10px;
          }

