  - store_type: dealer, rental, service, click-collect
  - size: small, medium, large (default: medium)
{%- endcomment -%}

{%- assign store_type = store_type | default: 'dealer' -%}
{%- assign size = size | default: 'medium' -%}

{%- case size -%}
  {%- when 'small' -%}
    {%- assign width = 32 -%}
    {%- assign height = 32 -%}
    {%- assign scale_factor = 0.112 -%}
  {%- when 'large' -%}
    {%- assign width = 44 -%}
