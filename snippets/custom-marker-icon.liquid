    {%- assign scale_factor = 0.154 -%}
  {%- else -%}
    {%- assign width = 40 -%}
    {%- assign height = 40 -%}
    {%- assign scale_factor = 0.140 -%}
{%- endcase -%}

{%- case store_type -%}
