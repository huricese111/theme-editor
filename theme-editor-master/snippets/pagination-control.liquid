{%- comment -%}
/**
 * Pagination Control Snippet
 * 
 * Renders pagination controls for paginated content with support for
 * dynamic filtering and category-based pagination.
 * 
 * PARAMETERS:
 * - paginate: Shopify pagination object
 * 
 * FEATURES:
 * - Previous/Next navigation
 * - Numbered page links
 * - Current page highlighting
 * - Support for dynamic content filtering
 * - Responsive design
 * 
 * USAGE:
 * {% render 'pagination-control', paginate: paginate %}
 */
{%- endcomment -%}

{%- if paginate.pages > 1 -%}
  <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}" id="pagination-control">
    <div class="pagination__inner">
      {%- if paginate.previous -%}
        <a href="{{ paginate.previous.url }}" class="pagination__item pagination__prev" aria-label="{{ 'general.pagination.previous' | t }}">
          <span class="pagination__prev-text">{{ 'general.pagination.previous' | t }}</span>
        </a>
      {%- else -%}
        <span class="pagination__item pagination__prev pagination__item--disabled" aria-label="{{ 'general.pagination.previous' | t }}">
          <span class="pagination__prev-text">{{ 'general.pagination.previous' | t }}</span>
        </span>
      {%- endif -%}

      <div class="pagination__numbers">
        {%- for part in paginate.parts -%}
          {%- if part.is_link -%}
            <a href="{{ part.url }}" class="pagination__item pagination__number" aria-label="{{ 'general.pagination.page' | t: page: part.title }}">
              {{ part.title }}
            </a>
          {%- else -%}
            {%- if part.title == paginate.current_page -%}
              <span class="pagination__item pagination__number pagination__number--current" aria-current="page" aria-label="{{ 'general.pagination.current_page' | t: page: part.title }}">
                {{ part.title }}
              </span>
            {%- else -%}
              <span class="pagination__item pagination__sep">{{ part.title }}</span>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>

      {%- if paginate.next -%}
        <a href="{{ paginate.next.url }}" class="pagination__item pagination__next" aria-label="{{ 'general.pagination.next' | t }}">
          <span class="pagination__next-text">{{ 'general.pagination.next' | t }}</span>
        </a>
      {%- else -%}
        <span class="pagination__item pagination__next pagination__item--disabled" aria-label="{{ 'general.pagination.next' | t }}">
          <span class="pagination__next-text">{{ 'general.pagination.next' | t }}</span>
        </span>
      {%- endif -%}
    </div>
  </nav>
{%- endif -%}

<style>
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 2rem 0;
  }

  .pagination__inner {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .pagination__item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 2.5rem;
    height: 2.5rem;
    padding: 0.5rem;
    text-decoration: none;
    color: #374151;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .pagination__item:hover:not(.pagination__item--disabled):not(.pagination__number--current) {
    background-color: #f9fafb;
    border-color: #9ca3af;
  }

  .pagination__number--current {
    background-color: #007acc;
    border-color: #007acc;
    color: white;
  }

  .pagination__item--disabled {
    color: #9ca3af;
    cursor: not-allowed;
    opacity: 0.6;
  }

  .pagination__sep {
    border: none;
    background: none;
    color: #9ca3af;
    cursor: default;
  }

  .pagination__numbers {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  /* Hide pagination when filtering shows no results or only one page worth of content */
  .pagination.hidden {
    display: none;
  }

  @media (max-width: 768px) {
    .pagination__item {
      min-width: 2rem;
      height: 2rem;
      font-size: 0.75rem;
    }
    
    .pagination__prev-text,
    .pagination__next-text {
      display: none;
    }
    
    .pagination__prev::after {
      content: '‹';
    }
    
    .pagination__next::after {
      content: '›';
    }
  }
</style>