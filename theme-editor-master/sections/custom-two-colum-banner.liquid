                width="{{ block.settings.subheading_image_1_width }}px"
                height="auto"
              >
              {%- if block.settings.subheading_image_1_link != blank -%}
                </a>
              {%- endif -%}
            {%- endif -%}

            {%- if block.settings.subheading_image_1b != blank -%}
              <a href="{{ block.settings.subheading_image_1b_link }}" target="_blank">
                <img
                  class="two-column-slide__subheading_image_1b"
                  style="position:{{ block.settings.subheading_image_1b_position }};top:{{ block.settings.subheading_image_1b_top }}px;left:{{ block.settings.subheading_image_1b_left }}px;z-index:{{ block.settings.subheading_image_1b_zindex }};"
                  src="{{ block.settings.subheading_image_1b | img_url: 'original' }}"
                  width="{{ block.settings.subheading_image_1b_width }}px"
                  height="auto"
                >
              </a>
            {%- endif -%}
