<slideshow-component
  data-pf-type="Section"
  id="{{ section.settings.section_id }}"
  class="slideshow-component"
  role="region"
  aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
>
  <div class="two-column-slides">
    {%- assign max_blocks = 2 -%}
    {%- for block in section.blocks limit: max_blocks -%}
      <div
        class="two-column-slide"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        style="
          display: flex; justify-content: center;
          background-image: {% if block.settings.image != blank %} url('{{ block.settings.image | img_url: '3000x3000' }}') {% else %} none {% endif %};
          background-color: {{ block.settings.background_color }};
          background-repeat: no-repeat; background-position: {{ block.settings.background_position }}; background-size:
            {% if block.settings.background_size == 'cover' or block.settings.background_size == 'contain' %} {{ block.settings.background_size }} {% else %} {{ block.settings.background_size }}% {% endif %}; place-content: center; align-items: {{ block.settings.background_align_items }}; padding-top: {{ block.settings.background_padding_top }}px; padding-left: {{ block.settings.background_padding_left }}px; padding-right: {{ block.settings.background_padding_right }}px; padding-bottom: {{ block.settings.background_padding_bottom }}px;
        "
      >

      {% if block.settings.liquid_content4 != blank %}
            {{ block.settings.liquid_content4 }}
        {% endif %}

        <div class="two-column-slide__content">
          {% if block.settings.liquid_content != blank %}
            {{ block.settings.liquid_content }}
          {% endif %}

          {%- if block.settings.subheading_image_title != blank -%}
            {%- if block.settings.subheading_image_title_link != blank -%}
              <a href="{{ block.settings.subheading_image_title_link }}" target="_blank">
            {%- endif -%}
            <img
              class="two-column-slide__subheading_image_1"
              style="position:{{ block.settings.subheading_image_title_position }};top:{{ block.settings.subheading_image_title_top }}px;left:{{ block.settings.subheading_image_title_left }}px;z-index:{{ block.settings.subheading_image_title_zindex }};"
              src="{{ block.settings.subheading_image_title | img_url: 'original' }}"
              width="{{ block.settings.subheading_image_title_width }}px"
              height="auto"
            >
            {%- if block.settings.subheading_image_title_link != blank -%}
              </a>
            {%- endif -%}
          {%- endif -%}

          {%- if block.settings.title_1 != blank -%}
            <div
              class="two-column-slide__heading  first-heading"
              style="color: {{ block.settings.heading_color_1 }}; font-size: {{ block.settings.heading_size_1 }}px; line-height: {{ block.settings.heading_size_1 | times: 1.3 }}px; text-align: center; font-weight: 700;"
            >
              <p>
                {% if request.locale.iso_code == 'de' %}
                  {{ block.settings.title_1_de }}
                {% elsif request.locale.iso_code == 'fr' %}
                  {{ block.settings.title_1_fr }}
                {% elsif request.locale.iso_code == 'fi' %}
                  {{ block.settings.title_1_fi }}
                {% else %}
                  {{ block.settings.title_1 }}
                {% endif %}
              </p>
            </div>
          {%- endif -%}

          {%- if block.settings.subheading_1 != blank -%}
            <div
              class="two-column-slide__text"
              style="color: {{ block.settings.subheading_color_1 }}; font-size: {{ block.settings.subheading_size_1 }}px; line-height: {{ block.settings.subheading_size_1 | times: 1.5 }}px;"
            >
              <p>
                {% if request.locale.iso_code == 'de' %}
                  {{ block.settings.subheading_1_de }}
                {% elsif request.locale.iso_code == 'fr' %}
                  {{ block.settings.subheading_1_fr }}
                 {% elsif request.locale.iso_code == 'fi' %}
                  {{ block.settings.subheading_1_fi }}
                {% else %}
                  {{ block.settings.subheading_1 }}
                {% endif %}
              </p>
            </div>
          {%- endif -%}

          {% if block.settings.liquid_content3 != blank %}
            {{ block.settings.liquid_content3 }}
          {% endif %}

          <div style="display: inline-flex; gap:10px">
            {%- if block.settings.subheading_image_1 != blank -%}
              {%- if block.settings.subheading_image_1_link != blank -%}
                <a href="{{ block.settings.subheading_image_1_link }}" target="_blank">
              {%- endif -%}
              <img
                class="two-column-slide__subheading_image_1"
                style="position:{{ block.settings.subheading_image_1_position }};top:{{ block.settings.subheading_image_1_top }}px;left:{{ block.settings.subheading_image_1_left }}px;z-index:{{ block.settings.subheading_image_1_zindex }};"
