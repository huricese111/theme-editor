<style>
  :root {
    --banner-height-desktop: {{ section.settings.desktop_height }}px;
    --banner-height-mobile: {{ section.settings.mobile_height }}px;
    --module-radius: 8px;
    --module-padding: 20px;
    --button-radius: 50px;
    --button-padding: 10px 20px;
    --button-font-size: 14px;
    --tag-bg-color: #f8e71c;
    --tag-color: #000;
    --desktop-gap: 20px;
    --text-button-spacing-desktop: 20px;
    --text-button-spacing-mobile: 16px;
  }

  .promo-section-container {
    padding: 20px;
    box-sizing: border-box;
  }

  .banner-desktop {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    gap: var(--desktop-gap);
    height: var(--banner-height-desktop);
  }

  .banner-left {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .banner-left .module {
    height: 100%;
    flex: 1;
  }

  .banner-right {
    display: grid;
    grid-template-rows: 1fr 1fr;
    gap: var(--desktop-gap);
    height: 100%;
  }

  .banner-right-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--desktop-gap);
    height: 100%;
  }

  .banner-right .module {
    height: 100%;
  }

  .module {
    position: relative;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: var(--module-radius);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .module::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.1);
    z-index: 1;
  }

  .module__inner {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: flex-end;
    gap: var(--text-button-spacing-desktop);
    padding: var(--module-padding);
    box-sizing: border-box;
  }

  .module-position-top .module__inner {
    justify-content: flex-start;
  }

  .module-position-center .module__inner {
    justify-content: center;
  }

  .module-position-bottom .module__inner {
    justify-content: flex-end;
  }

  .module__content {
    min-width: 140px;
    margin: 0;
  }

  .module__button {
    align-self: flex-start;
    margin: 0;
  }

  .banner-left .module__title {
    font-weight: 700;
    font-size: {{ section.settings.left_title_size }}px;
    line-height: {{ section.settings.left_title_size | times: 1.14 }}px;
  }

  .module__title--medium {
    font-weight: 700;
    font-size: {{ section.settings.right1_title_size }}px;
    line-height: {{ section.settings.right1_title_size | times: 1.28 }}px;
  }

  .module__title--small {
    font-weight: 700;
    font-size: {{ section.settings.right2_title_size }}px;
    line-height: {{ section.settings.right2_title_size | times: 1.3 }}px;
  }

  .module__tag {
    /* 移除margin，使用gap统一间距 */
    margin: 0;
    font-size: 22px;
    line-height: 40px;
    height: 40px;
    color: #000;
    text-align: center;
    display: inline-block;
    padding: 0 10px;
    background-color: #f8e71c;
    border-radius: 8px;
    white-space: nowrap;
    font-weight: 700;
  }

  .hide-on-mobile {
    display: none;
  }

  @media (min-width: 769px) {
    .banner-mobile {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .promo-section-container {
      padding: 0;
    }

    .module {
      border-radius: 0;
    }

    .banner-desktop {
      display: none;
    }

    .banner-mobile {
      display: block;
    }

    .banner-mobile-left .module,
    .banner-mobile-right .module {
      height: 100%;
    }

    .banner-mobile-left,
    .banner-mobile-right-row {
      height: var(--banner-height-mobile);
    }

    .banner-mobile-right-row .module-right-1 {
      height: var(--banner-height-mobile);
    }

    .module__inner {
      gap: var(--text-button-spacing-mobile);
      padding-bottom: 20px; /* 统一content与底部距离 */
    }

    .banner-mobile-left .module__title {
      font-size: {{ section.settings.left_title_size_mobile }}px;
      line-height: {{ section.settings.left_title_size_mobile | times: 1.14 }}px;
      white-space: auto;
      margin: 0;
    }

    .module__title--medium {
