{% schema %}
{
  "name": " Specification sheet",
  "settings": [],
  "presets": [
    {
      "name": "Specification sheet",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% assign lang = request.locale.iso_code %}
<div class="tabs-content-section">
  <h2 class="specification-title" id="specification">
    {% case lang %}
      {% when 'de' %}Spezifikation
      {% when 'fr' %}Sp√©cifications
      {% when 'fi' %}Tekniset tiedot
      {% else %}Specification
    {% endcase %}
  </h2>

  <div class="specification-list">
    <!-- E-Bike System -->
    {% render 'spec-module',
      fields: "frame,motor2,battery,display",
      labels: "frame,motor,battery,display",
      title: "e-bike-system",
      lang: lang
    %}
    
    <!-- Suspension -->
    {% render 'spec-module',
      fields: "fork,shock",
      labels: "fork,shock",
      title: "suspension",
      lang: lang
    %}
    
    <!-- Shifting -->
    {% render 'spec-module',
      fields: "derailleur,shifters,sprocket,cassette",
      labels: "derailleur,shifters,sprocket,cassette",
      title: "shifting",
      lang: lang
    %}
    
    <!-- Brakes -->
    {% render 'spec-module',
      fields: "brake_f_r,brake_disc_f_r,brake_levers",
      labels: "brake_f_r,brake_disc_f_r,brake_levers",
      title: "brakes",
      lang: lang
    %}
    
    <!-- Wheels -->
    {% render 'spec-module',
      fields: "tires,rims,hub_front_f_r",
      labels: "tires,rims,hub_front_f_r",
      title: "wheels",
      lang: lang
    %}
    
    <!-- Steering & Seating -->
    {% render 'spec-module',
      fields: "handlebar,grips,stem,seat_post,saddle",
      labels: "handlebar,grips,stem,seat_post,saddle",
      title: "steering_seating",
      lang: lang
    %}
    
    <!-- Components -->
    {% render 'spec-module',
      fields: "front_light,rear_light,carrier",
      labels: "front_light,rear_light,carrier",
      title: "components",
      lang: lang
    %}
    
    <!-- Weight & Class -->
    {% render 'spec-module',
      fields: "perm_total_weight,bike_weight,category",
      labels: "perm_total_weight,bike_weight,category",
      title: "weight_class",
      lang: lang
    %}
  </div>
</div>

<style>
  .tabs-content-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 100px 20px;
  }

  .specification-title {
    font-size: 30px;
    margin-bottom: 20px;
    text-align: left;
  }

  .specification-list {
    display: flex;
    flex-direction: column;
  }

  .specification-module {
    margin-bottom: 20px;
  }

  .specification-row {
    display: flex;
    justify-content: space-between;
    padding: 5px 0;
  }

  .column {
    flex: 1;
    margin: 0 5px;
  }

  .label-column {
    font-size: 18px;
    margin-bottom: 5px;
  }

  .value-column {
    font-size: 16px;
  }

  .specification-header {
    width: 100%;
    background-color: #f0f0f0;
    padding: 10px;
    margin: 10px 0;
  }

  .specification-header h5 {
    margin: 0;
    text-align: left;
  }

  @media (max-width: 768px) {
    .specification-row {
      flex-direction: column;
    }
  }
</style>