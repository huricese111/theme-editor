<script>
(function() {
  'use strict';
  
  // Enhanced FAQ functionality
  class EnhancedFAQ {
    constructor() {
      this.searchInput = document.getElementById('faq-search-input');
      this.indexList = document.getElementById('faq-index-list');
      this.sections = document.querySelectorAll('.enhanced-tabs-section');
      this.questions = document.querySelectorAll('.collapsible-tab[data-question-id]');
      this.searchTimeout = null;
      
      this.init();
    }
    
    init() {
      this.buildIndex();
      this.bindEvents();
    }
    
    buildIndex() {
      if (!this.indexList) return;
      
      this.indexList.innerHTML = '';
      
      this.questions.forEach((question, index) => {
        const title = question.querySelector('.collapsible-tab__header span').textContent.trim();
        const questionId = question.getAttribute('data-question-id');
        
        const listItem = document.createElement('li');
        listItem.className = 'faq-index__item';
        
        const link = document.createElement('a');
        link.className = 'faq-index__link';
        link.href = `#question-${questionId}`;
        link.textContent = title;
        link.setAttribute('data-question-id', questionId);
        
        listItem.appendChild(link);
        this.indexList.appendChild(listItem);
      });
    }
    
    bindEvents() {
      // Search functionality
      if (this.searchInput) {
        this.searchInput.addEventListener('input', (e) => {
          clearTimeout(this.searchTimeout);
          this.searchTimeout = setTimeout(() => {
            this.performSearch(e.target.value);
          }, 300);
        });
      }
      
      // Index navigation
      if (this.indexList) {
        this.indexList.addEventListener('click', (e) => {
          if (e.target.classList.contains('faq-index__link')) {
            e.preventDefault();
            const questionId = e.target.getAttribute('data-question-id');
            this.scrollToQuestion(questionId);
            this.updateActiveIndex(e.target);
          }
        });
      }
      
      // Update active index on scroll
      window.addEventListener('scroll', () => {
        this.updateActiveIndexOnScroll();
      });
    }
    
    performSearch(query) {
      const searchTerm = query.toLowerCase().trim();
      
      if (searchTerm === '') {
        // Show all questions and sections
        this.questions.forEach(question => {
          question.classList.remove('hidden');
        });
        this.sections.forEach(section => {
          section.classList.remove('hidden');
        });
        return;
      }
      
      let hasVisibleQuestions = false;
      
      this.questions.forEach(question => {
        const title = question.querySelector('.collapsible-tab__header span').textContent.toLowerCase();
        const content = question.querySelector('.collapsible-tab__content').textContent.toLowerCase();
        
        if (title.includes(searchTerm) || content.includes(searchTerm)) {
          question.classList.remove('hidden');
          hasVisibleQuestions = true;
        } else {
          question.classList.add('hidden');
        }
      });
      
      // Hide sections with no visible questions
      this.sections.forEach(section => {
        const visibleQuestions = section.querySelectorAll('.collapsible-tab[data-question-id]:not(.hidden)');
        if (visibleQuestions.length === 0) {
          section.classList.add('hidden');
        } else {
          section.classList.remove('hidden');
        }
      });
    }
    
    scrollToQuestion(questionId) {
      const question = document.querySelector(`[data-question-id="${questionId}"]`);
      if (question) {
        question.scrollIntoView({ 
          behavior: 'smooth', 
          block: 'start',
          inline: 'nearest'
        });
        
        // Open the question if it's closed
        if (!question.hasAttribute('open')) {
          question.setAttribute('open', '');
        }
      }
    }
    
    updateActiveIndex(activeLink) {
      if (!this.indexList) return;
      
      const links = this.indexList.querySelectorAll('.faq-index__link');
      links.forEach(link => link.classList.remove('active'));
      activeLink.classList.add('active');
    }
    
    updateActiveIndexOnScroll() {
      if (!this.indexList) return;
      
      const scrollPosition = window.scrollY + 100;
      let activeQuestionId = null;
      
      this.questions.forEach(question => {
        const rect = question.getBoundingClientRect();
        const questionTop = rect.top + window.scrollY;
        
        if (questionTop <= scrollPosition) {
          activeQuestionId = question.getAttribute('data-question-id');
        }
      });
      
      if (activeQuestionId) {
        const links = this.indexList.querySelectorAll('.faq-index__link');
        links.forEach(link => {
          link.classList.remove('active');
          if (link.getAttribute('data-question-id') === activeQuestionId) {
            link.classList.add('active');
          }
        });
      }
    }
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new EnhancedFAQ();
