{%- comment -%}
/**
 * Enhanced Collapsible Tabs Section with Integrated FAQ Header
 * 
 * A comprehensive collapsible tabs/accordion component with integrated FAQ header,
 * multi-language support, and complete independence from external stylesheets.
 * 
 * CORE FEATURES:
 * - Integrated FAQ header with search and index functionality
 * - Multi-language accordion/tabs interface
 * - Dynamic language detection and content switching
 * - Multiple block types (content, button, question/answer)
 * - Responsive design with modern styling
 * - Complete independence from external CSS/JS
 * - Single FAQ header per page with multi-section support
 * - Search functionality across all sections
 * - Index navigation for quick access
 * 
 * TECHNICAL FEATURES:
 * - Self-contained styling and functionality
 * - Modern, fashionable design with light color scheme
 * - Responsive layout with mobile-first approach
 * - Accessible keyboard navigation
 * - Smooth animations and transitions
 * - Cross-theme compatibility
 */
{%- endcomment -%}

{%- assign locale_code = request.locale.iso_code -%}
{%- assign lang_map = 'de,fr,fi' | split: ',' -%}
{%- assign lang_suffix = '' -%}
{%- if lang_map contains locale_code -%}
  {%- assign lang_suffix = '_' | append: locale_code -%}
{%- endif -%}

{%- assign section_id = 'enhanced-tabs-' | append: section.id -%}
{%- assign has_faq_header = section.settings.enable_faq_header -%}
{%- assign is_first_faq_section = false -%}

{%- comment -%} Check if this is the first section with FAQ header enabled {%- endcomment -%}
{%- if has_faq_header -%}
  {%- assign faq_sections_count = 0 -%}
  {%- for section_item in template.sections -%}
    {%- if section_item.type == 'enhanced-collapsible-tabs' and section_item.settings.enable_faq_header -%}
      {%- assign faq_sections_count = faq_sections_count | plus: 1 -%}
      {%- if section_item.id == section.id and faq_sections_count == 1 -%}
        {%- assign is_first_faq_section = true -%}
      {%- endif -%}
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

<style>
  /* Reset and Base Styles */
  .enhanced-tabs-container {
    --primary-color: #2563eb;
    --primary-hover: #1d4ed8;
    --text-primary: #1f2937;
    --text-secondary: #6b7280;
    --text-muted: #9ca3af;
    --border-light: #e5e7eb;
    --border-medium: #d1d5db;
    --background-white: #ffffff;
    --background-light: #f9fafb;
    --background-hover: #f3f4f6;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --spacing-xs: 0.5rem;
    --spacing-sm: 0.75rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-2xl: 3rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
    --line-height-tight: 1.25;
    --line-height-normal: 1.5;
    --line-height-relaxed: 1.625;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    --transition-fast: 150ms ease-in-out;
    --transition-normal: 250ms ease-in-out;
    --max-width: 1200px;
    --content-width: 800px;
    --index-width: 280px;
  }

  .enhanced-tabs-container * {
    box-sizing: border-box;
  }

  .enhanced-tabs-container {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    color: var(--text-primary);
    line-height: var(--line-height-normal);
  }

  /* FAQ Header Styles */
  .faq-header {
    background: var(--background-white);
    border-bottom: 1px solid var(--border-light);
    padding: var(--spacing-2xl) 0;
    margin-bottom: var(--spacing-2xl);
  }

  .faq-header__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    display: flex;
    gap: var(--spacing-2xl);
    align-items: flex-start;
  }

  .faq-header__content {
    flex: 1;
    max-width: var(--content-width);
  }

  .faq-header__title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-md) 0;
    line-height: var(--line-height-tight);
  }

  .faq-header__description {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    margin: 0 0 var(--spacing-xl) 0;
    line-height: var(--line-height-relaxed);
  }

  .faq-search {
    position: relative;
    margin-bottom: var(--spacing-lg);
  }

  .faq-search__input {
    width: 100%;
    height: 56px;
    padding: 0 var(--spacing-md) 0 56px;
    border: 2px solid var(--border-medium);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    background: var(--background-white);
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
    outline: none;
  }

  .faq-search__input:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .faq-search__input::placeholder {
    color: var(--text-muted);
  }

  .faq-search__icon {
    position: absolute;
    top: 50%;
    left: var(--spacing-md);
    transform: translateY(-50%);
    width: 24px;
    height: 24px;
    color: var(--text-muted);
    pointer-events: none;
  }

  /* FAQ Index */
  .faq-index {
    width: var(--index-width);
    flex-shrink: 0;
  }

  .faq-index__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-md) 0;
  }

  .faq-index__list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .faq-index__item {
    margin-bottom: var(--spacing-xs);
  }

  .faq-index__link {
    display: block;
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-normal);
  }

  .faq-index__link:hover {
    background: var(--background-hover);
    color: var(--text-primary);
  }

  .faq-index__link.active {
    background: var(--primary-color);
    color: white;
  }

  /* Main Container */
  .enhanced-tabs-main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    display: flex;
    gap: var(--spacing-2xl);
    align-items: flex-start;
  }

  .enhanced-tabs-content {
    flex: 1;
    max-width: var(--content-width);
  }

  .enhanced-tabs-sidebar {
    width: var(--index-width);
    flex-shrink: 0;
  }

  /* Section Styles */
  .enhanced-tabs-section {
    margin-bottom: var(--spacing-2xl);
  }

  .enhanced-tabs-section:last-child {
    margin-bottom: 0;
  }

  .enhanced-tabs-section__title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-xl) 0;
    line-height: var(--line-height-tight);
  }

  /* Collapsible Tabs */
  .collapsible-tabs {
    background: var(--background-white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-light);
  }

  .collapsible-tab {
    border-bottom: 1px solid var(--border-light);
  }

  .collapsible-tab:last-child {
    border-bottom: none;
  }

  .collapsible-tab__header {
    width: 100%;
    padding: var(--spacing-lg) var(--spacing-xl);
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    transition: background-color var(--transition-fast);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .collapsible-tab__header:hover {
    background: var(--background-hover);
  }

  .collapsible-tab__header:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: -2px;
  }

  .collapsible-tab__icon {
    width: 20px;
    height: 20px;
    transition: transform var(--transition-fast);
    flex-shrink: 0;
    margin-left: var(--spacing-md);
  }

  .collapsible-tab[open] .collapsible-tab__icon {
    transform: rotate(180deg);
  }

  .collapsible-tab__content {
    padding: 0 var(--spacing-xl) var(--spacing-lg) var(--spacing-xl);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
  }

  .collapsible-tab__content > *:first-child {
    margin-top: 0;
  }

  .collapsible-tab__content > *:last-child {
    margin-bottom: 0;
  }

  /* Content Block Styles */
  .content-block {
    margin-bottom: var(--spacing-xl);
  }

  .content-block:last-child {
    margin-bottom: 0;
  }

  .content-block__text {
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
  }

  .content-block__image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
