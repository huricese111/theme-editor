    .faq-header__container,
    .enhanced-tabs-main {
      flex-direction: column;
      gap: var(--spacing-xl);
    }

    .faq-index,
    .enhanced-tabs-sidebar {
      width: 100%;
      max-width: none;
    }

    .faq-header__content,
    .enhanced-tabs-content {
      max-width: none;
    }

    .faq-index__list {
      display: flex;
      flex-wrap: wrap;
      gap: var(--spacing-xs);
    }

    .faq-index__item {
      margin-bottom: 0;
    }
