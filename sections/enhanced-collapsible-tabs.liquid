  @media (max-width: 768px) {
    .faq-header__container,
    .enhanced-tabs-main {
      padding: 0 var(--spacing-md);
    }

    .faq-header {
      padding: var(--spacing-xl) 0;
    }

    .faq-header__title {
      font-size: var(--font-size-2xl);
    }

    .faq-header__description {
      font-size: var(--font-size-base);
    }

    .collapsible-tab__header {
      padding: var(--spacing-md) var(--spacing-lg);
      font-size: var(--font-size-base);
    }

    .collapsible-tab__content {
      padding: 0 var(--spacing-lg) var(--spacing-md) var(--spacing-lg);
    }
  }

  /* Hidden state for non-matching search results */
  .collapsible-tab.hidden {
    display: none;
  }

  .enhanced-tabs-section.hidden {
    display: none;
  }

  /* Animation for smooth transitions */
  .collapsible-tab__content {
    transition: all var(--transition-normal);
  }

  /* Focus styles for accessibility */
  .faq-index__link:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }
</style>

