{% schema %}
{
  "name": "Enhanced Form",
  "class": "page-section-spacing",
  "settings": [
    {
      "type": "header",
      "content": "Form Settings"
    },
    {
      "type": "checkbox",
      "id": "show_page_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "text",
      "id": "form_title",
      "label": "Form title",
      "default": "Enhanced Form"
    },
    {
      "type": "text",
