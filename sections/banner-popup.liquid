{%- comment -%} Banner Section {%- endcomment -%}
<section class="banner-popup-section" id="banner-{{ section.id }}">
  {%- style -%}
    #banner-{{ section.id }} {
      --banner-height: {{ section.settings.banner_height }}px;
      --banner-bg-color: {{ section.settings.banner_bg_color }};
      --banner-text-color: {{ section.settings.banner_text_color }};
      --button-bg-color: {{ section.settings.button_bg_color }};
      --button-text-color: {{ section.settings.button_text_color }};
      --button-font-size: {{ section.settings.button_font_size }}px;
      min-height: var(--banner-height);
      background-color: var(--banner-bg-color);
      color: var(--banner-text-color);
    }

    #banner-{{ section.id }} .banner-popup__container {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr;
      gap: 1.5rem;
      padding: 1.5rem;
      align-items: center;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .banner-popup__timeline {
      flex-shrink: 0;
      justify-content: space-between;
      gap: 2rem;
      padding: 1.5rem 2rem;
      position: relative;
      z-index: 2;
    }

    #banner-{{ section.id }} .banner-popup__action {
      display: flex;
      justify-content: flex-end;
      margin-right: 1rem;
    }

    #banner-{{ section.id }} .banner-popup__button {
      background-color: var(--button-bg-color);
      color: var(--button-text-color);
      font-size: var(--button-font-size);
      border-radius: 50px;
      padding: 1rem 2rem;
      border: none;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s ease;
      white-space: nowrap;
    }

    #banner-{{ section.id }} .banner-popup__button:hover {
      opacity: 0.9;
      transform: translateY(-2px);
    }

    /* Banner Description Styles */
    #banner-{{ section.id }} .banner-popup__description {
      margin-bottom: 0.5rem;
      line-height: 1.5;
    }
    
    /* Force banner description styles with higher specificity */
    #banner-{{ section.id }} .banner-popup__description,
    #banner-{{ section.id }} .banner-popup__description *,
    #banner-{{ section.id }} .banner-popup__description p,
    #banner-{{ section.id }} .banner-popup__description span,
    #banner-{{ section.id }} .banner-popup__description div {
      font-size: inherit !important;
      font-weight: inherit !important;
      color: inherit !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    
    #banner-{{ section.id }} .banner-popup__description {
      margin-bottom: 0.5rem !important;
    }

    #banner-{{ section.id }} .banner-popup__description a {
      text-decoration: underline;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      #banner-{{ section.id }} {
        margin-left: 1rem;
        margin-right: 1rem;
      }
      
      #banner-{{ section.id }} .banner-popup__container {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 1.5rem;
        padding: 1.5rem 1rem;
        justify-items: center;
        align-items: center;
      }
      
      #banner-{{ section.id }} .banner-popup__actions {
        order: 3;
      }
      
      #banner-{{ section.id }} .banner-popup__content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
      }
      
      #banner-{{ section.id }} .banner-popup__timeline {
        justify-content: center;
        align-items: center;
      }
      
      #banner-{{ section.id }} .banner-popup__action {
        justify-content: center;
        margin-right: 0;
      }
      
      #banner-{{ section.id }} .banner-popup__button {
        padding: 0.8rem 1.5rem;
        font-size: calc(var(--button-font-size) * 0.9);
      }

      {%- for block in section.blocks -%}
        {%- if block.type == 'banner_title' -%}
          #banner-{{ section.id }} .banner-popup__title {
            font-size: {{ block.settings.mobile_font_size }}px !important;
            text-align: center;
          }
        {%- endif -%}
        {%- if block.type == 'banner_description' -%}
          #banner-{{ section.id }} .banner-popup__description {
            font-size: {{ block.settings.mobile_font_size }}px !important;
            text-align: center;
          }
        {%- endif -%}
      {%- endfor -%}
    }

    @media (max-width: 480px) {
      #banner-{{ section.id }} {
        margin-left: 0.5rem;
        margin-right: 0.5rem;
      }
      
      #banner-{{ section.id }} .banner-popup__container {
        padding: 1rem 0.75rem;
        gap: 1rem;
      }
    }
  {%- endstyle -%}

  {%- if section.settings.banner_bg_image != blank -%}
    <div class="banner-popup__bg-overlay" style="background-color: {{ section.settings.banner_bg_color }}; opacity: {{ section.settings.banner_bg_opacity | divided_by: 100.0 }};"></div>
  {%- endif -%}

  <div class="banner-popup__container{% unless has_timeline %} no-timeline{% endunless %}">
    <!-- Left-side Content -->
    <div class="banner-popup__content">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'banner_title' -%}
            {%- if block.settings.title != blank -%}
              <h2 class="banner-popup__title" 
                  style="font-size: {{ block.settings.font_size }}px; 
                         font-weight: {{ block.settings.font_weight }}; 
                         color: {{ block.settings.text_color }}; 
                         margin-top: {{ block.settings.margin_top | default: 0 }}px; 
                         margin-bottom: {{ block.settings.margin_bottom | default: 0 }}px;"
                  {{ block.shopify_attributes }}>
                {%- liquid
                  assign current_title = block.settings.title
                  if request.locale.iso_code == 'de' and block.settings.title_de != blank
                    assign current_title = block.settings.title_de
                  elsif request.locale.iso_code == 'fr' and block.settings.title_fr != blank
                    assign current_title = block.settings.title_fr
                  elsif request.locale.iso_code == 'fi' and block.settings.title_fi != blank
                    assign current_title = block.settings.title_fi
                  endif
                -%}
                {{ current_title | escape }}
              </h2>
            {%- endif -%}

          {%- when 'banner_description' -%}
            {%- if block.settings.description != blank -%}
              <div class="banner-popup__description" 
                   style="font-size: {{ block.settings.font_size }}px !important; 
                          font-weight: {{ block.settings.font_weight }} !important; 
                          color: {{ block.settings.text_color }} !important; 
                          margin-top: {{ block.settings.margin_top | default: 0 }}px !important; 
                          margin-bottom: {{ block.settings.margin_bottom | default: 0 }}px !important;"
                   {{ block.shopify_attributes }}>
                {%- liquid
                  assign description_content = block.settings.description
                  if request.locale.iso_code == 'de' and block.settings.description_de != blank
                    assign description_content = block.settings.description_de
                  elsif request.locale.iso_code == 'fr' and block.settings.description_fr != blank
                    assign description_content = block.settings.description_fr
                  elsif request.locale.iso_code == 'fi' and block.settings.description_fi != blank
                    assign description_content = block.settings.description_fi
                  endif
                -%}
                {{ description_content }}
              </div>
            {%- endif -%}

        {%- endcase -%}
      {%- endfor -%}
    </div>

    {%- liquid
      assign has_timeline = false
      for block in section.blocks
        if block.type == 'timeline_item'
          assign has_timeline = true
          break
        endif
      endfor
    -%}

    {%- if has_timeline -%}
      <!-- Middle Timeline/Countdown Area -->
      <div class="banner-popup__timeline">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'timeline_item' -%}
              <div class="timeline-item" {{ block.shopify_attributes }}>
              <div class="timeline-bullet">•</div>
              <span class="timeline-text">
                {%- liquid
                  assign timeline_text = block.settings.timeline_text
                  if request.locale.iso_code == 'de' and block.settings.timeline_text_de != blank
                    assign timeline_text = block.settings.timeline_text_de
                  elsif request.locale.iso_code == 'fr' and block.settings.timeline_text_fr != blank
                    assign timeline_text = block.settings.timeline_text_fr
                  elsif request.locale.iso_code == 'fi' and block.settings.timeline_text_fi != blank
                    assign timeline_text = block.settings.timeline_text_fi
                  endif
                -%}
                {{ timeline_text | escape }}
              </span>
            </div>

          {%- when 'banner_countdown' -%}
            <script src="{{ 'countdown-timer.js' | asset_url }}" defer></script>
            <div class="banner-countdown countdown__block countdown-font-{{ block.settings.number_font }} countdown-divider-{{ block.settings.divider_type }} no-js-hidden" id="{{ block.id }}" {{ block.shopify_attributes }}>
              {% render 'countdown-timer',
                end_date: block.settings.end_date,
                end_time: block.settings.end_time,
                end_text: block.settings.end_text,
                end_midnight: true,
                hide_on_end: block.settings.hide_on_end,
                show_labels: block.settings.show_timer_labels
              %}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    </div>
      </div>
    {%- endif -%}

    <!-- Right-side Action Buttons -->
    <div class="banner-popup__actions">
      {%- for block in section.blocks -%}
        {%- if block.type == '@app' -%}
          {% render block %}
        {%- endif -%}
      {%- endfor -%}

      {%- if section.settings.show_button -%}
        {%- for block in section.blocks -%}
          <div class="banner-popup__action">
            {%- case block.type -%}
              {%- when 'banner_button' -%}
                {%- liquid
                  assign current_button_link = section.settings.button_link_en
                  if request.locale.iso_code == 'de' and section.settings.button_link_de != blank
                    assign current_button_link = section.settings.button_link_de
                  elsif request.locale.iso_code == 'fr' and section.settings.button_link_fr != blank
                    assign current_button_link = section.settings.button_link_fr
                  elsif request.locale.iso_code == 'fi' and section.settings.button_link_fi != blank
                    assign current_button_link = section.settings.button_link_fi
                  endif
                -%}
                
                {%- if current_button_link != blank -%}
                  <a href="{{ current_button_link }}" 
                     class="banner-popup__button"
                     {% if section.settings.button_target_blank %}target="_blank" rel="noopener noreferrer"{% endif %}>
                    {%- liquid
                      assign button_text = section.settings.button_text
                      if request.locale.iso_code == 'de' and section.settings.button_text_de != blank
                        assign button_text = section.settings.button_text_de
                      elsif request.locale.iso_code == 'fr' and section.settings.button_text_fr != blank
                        assign button_text = section.settings.button_text_fr
                      elsif request.locale.iso_code == 'fi' and section.settings.button_text_fi != blank
                        assign button_text = section.settings.button_text_fi
                      endif
                    -%}
                    {{ button_text | escape }}
                  </a>
                {%- else -%}
                  <button type="button" class="banner-popup__button" disabled style="opacity: 0.5; cursor: not-allowed;">
                    {%- liquid
                      assign button_text_final = section.settings.button_text
                      if request.locale.iso_code == 'de' and section.settings.button_text_de != blank
                        assign button_text_final = section.settings.button_text_de
                      elsif request.locale.iso_code == 'fr' and section.settings.button_text_fr != blank
                        assign button_text_final = section.settings.button_text_fr
                      elsif request.locale.iso_code == 'fi' and section.settings.button_text_fi != blank
                        assign button_text_final = section.settings.button_text_fi
                      endif

                      if button_text_final == blank
                        if request.locale.iso_code == 'de'
                          assign button_text_final = 'Link konfigurieren'
                        elsif request.locale.iso_code == 'fr'
                          assign button_text_final = 'Configurer le lien'
                        elsif request.locale.iso_code == 'fi'
                          assign button_text_final = 'Määritä linkki'
                        else
                          assign button_text_final = 'Configure Link'
                        endif
                      endif
                    -%}
                    {{ button_text_final | escape }}
                  </button>
                {%- endif -%}
            {%- endcase -%}
          </div>
        {%- endfor -%}
      {%- endif -%}
  </div>
</section>

<style>
