  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}



#banner-{{ section.id }} .banner-popup__container {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  gap: 1.5rem;
  padding: 1.5rem;
  align-items: center;
  height: 100%;
}

#banner-{{ section.id }} .banner-popup__container.no-timeline {
  grid-template-columns: 1fr auto;
}

.banner-popup__timeline {
  flex-shrink: 0;
}

.banner-popup__actions {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  align-items: center;
}

@media (max-width: 768px) {
  #banner-{{ section.id }} .banner-popup__container {
    position: relative;
    height: auto;
    display: flex;
    flex-direction: column;
    text-align: center;
    gap: 0.5rem;
    padding: 1.5rem 1rem;
    align-items: center;
  }

  #banner-{{ section.id }} .banner-popup__actions {
