  position: relative;
  overflow: hidden;
  max-width: {{ section.settings.banner_max_width }}px;
  margin: {{ section.settings.banner_margin_top }}px auto {{ section.settings.banner_margin_bottom }}px auto;
  border-radius: 12px;
  {%- if section.settings.banner_bg_image != blank -%}
    background-image: url('{{ section.settings.banner_bg_image | image_url }}');
    background-size: cover;
    background-position: center;
  {%- endif -%}
}

@media (max-width: 768px) {
  .banner-popup-section {
    {%- if section.settings.mobile_background_image != blank -%}
      background-image: url('{{ section.settings.mobile_background_image | image_url }}');
    {%- endif -%}
