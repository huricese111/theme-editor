    color: #fff;
    text-align: center;
    margin-top: 15px;
    font-size: 18px;
    padding: 0 20px;
    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
  }

  .lightbox-close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    color: white;
    font-size: 30px;
    cursor: pointer;
    z-index: 10;
    padding: 10px;
    opacity: 0.8;
    transition: opacity 0.3s;
  }

