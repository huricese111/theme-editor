{%- assign lang_map = 'de,fr,fi' | split: ',' -%}
{%- assign lang_suffix = '' -%}
{%- if lang_map contains request.locale.iso_code -%}
  {%- assign lang_suffix = '_' | append: request.locale.iso_code -%}
{%- endif -%}

<div class="container" {%- render 'animation-attrs', attrs: 'data-cc-animate' -%}>
  <div class="collapsible-tabs">
    {% if section.settings.title != blank %}
      {%- assign title_key = 'title' | append: lang_suffix -%}
      <h3 class="collapsible-tabs__heading collapsible-tabs__content" id="faq-{{ section.settings.title | handle }}">
        {{ section.settings[title_key] | default: section.settings.title | escape }}
      </h3>
    {% endif %}

    {%- for block in section.blocks -%}
      <div class="collapsible-tabs__block" {{ block.shopify_attributes }}>
        {% if block.type == 'content' %}
          <div class="collapsible-tabs__text collapsible-tabs__content rte">
            {%- assign content_key = 'content' | append: lang_suffix -%}
            {{ block.settings[content_key] | default: block.settings.content }}

            {{ block.settings.liquid_content }}

            {% if block.settings.image != blank %}
              {%
                render 'responsive-image',
                image: block.settings.image,
                alt: block.settings.title | escape,
                sizes: "100vw",
                class: "collapsible-tabs__image"
              %}
            {% endif %}
          </div>

        {% elsif block.type == 'button' %}
          <div class="collapsible-tabs__button collapsible-tabs__content">
            <a class="btn btn--primary btn--link" href="{{ block.settings.link }}"
              ><span class="btn__text">{{ block.settings.title | escape }}</span></a
            >
          </div>

        {% elsif block.type == 'question' %}
          {%- assign title_key = 'title' | append: lang_suffix -%}
          {%- assign answer_key = 'answer' | append: lang_suffix -%}
          {%- assign answer_2_key = 'answer_2' | append: lang_suffix -%}

          <div class="collapsible-tabs__tab">
            <details-disclosure>
              <details
                class="disclosure"
                id="detail-{{ block.id }}"
                aria-expanded="false"
                data-accordion
              >
                <summary
                  class="disclosure__title"
                  role="button"
                  aria-controls="content-{{ block.id }}"
                  aria-expanded="false"
                >
                  {{ block.settings[title_key] | default: block.settings.title }}
                </summary>
                <div
                  id="content-{{ block.id }}"
                  class="disclosure__panel has-motion"
                  aria-labelledby="detail-{{ block.id }}"
                >
                  <div class="disclosure__content rte">
                    {{ block.settings[answer_key] | default: block.settings.answer }}

                    {{ block.settings.liquid_content }}

                    {% if block.settings.image != blank %}
                      {%
                        render 'responsive-image',
                        image: block.settings.image,
                        alt: block.settings.title | escape,
                        sizes: "100vw",
                        class: "collapsible-tabs__image"
                      %}
                    {% endif %}

                    {% if block.settings.answer_2 != blank or block.settings[answer_2_key] != blank %}
                      <div style="margin-top: 40px;">
                        {{ block.settings[answer_2_key] | default: block.settings.answer_2 }}
                      </div>
                    {% endif %}

                    {% if block.settings.image_2 != blank %}
                      {%
                        render 'responsive-image',
                        image: block.settings.image_2,
                        alt: block.settings.title | escape,
                        sizes: "100vw",
                        class: "collapsible-tabs__image"
                      %}
                    {% endif %}
                  </div>
                </div>
              </details>
            </details-disclosure>
          </div>
        {% endif %}
      </div>
    {%- endfor -%}
  </div>
</div>

<style>
  .collapsible-tabs__tab .disclosure__title {
    padding-top: 20px;
    padding-bottom: 20px;
    border: 0;
    font-size: 1em;
    font-weight: 700;
    position: relative;
    padding-right: 40px;
    cursor: pointer;
  }

  details[open] .disclosure__title:after {
    transform: translateY(-50%) rotate(45deg);
  }

  .collapsible-tabs__image {
    width: 100%;
    height: auto;
    margin-top: 15px;
    border-radius: 4px;
    display: block;
  }

  .disclosure__title:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }

  .collapsible-tabs {
    max-width: var(--reading-container-width, 800px);
    margin: var(--section-padding) auto;
  }
  .collapsible-tabs .disclosure {
    margin: 0;
    border: 0;
  }

  .collapsible-tabs__tab {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  .collapsible-tabs__tab .disclosure__title {
    padding-top: 20px;
    padding-bottom: 20px;
    border: 0;
    font-size: 1.3em;
  }
  .collapsible-tabs__tab p:first-child {
    margin-top: 0;
  }
  .collapsible-tabs__tab p:last-child {
    margin-bottom: 0;
  }

  .collapsible-tabs__heading {
    margin-top: 40px;
    margin-bottom: 20px;
  }

  .collapsible-tabs__text {
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .collapsible-tabs__button {
    margin-top: 20px;
    margin-bottom: 20px;
  }
</style>

