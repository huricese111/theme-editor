{% schema %}
{
  "name": "Custom Image row",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "title_de",
      "label": "Title (German)",
      "default": "Standardtitel"
    },
    {
      "type": "text",
      "id": "title_fr",
      "label": "Title (French)",
      "default": "Titre par défaut"
    },
    {
      "type": "text",
      "id": "title_fi",
      "label": "Title (Finland)",
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Module Title Font Size (px)",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 30
    },
    {
      "type": "range",
      "id": "description_font_size",
      "label": "Description Font Size (px)",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 14
    }
  ],
  "blocks": [
    {
      "type": "module",
      "name": "Module",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Module Image"
        },
        {
            "type": "number",
            "id": "subheading_image_1_width",
            "label": "Image Width"
          },
        {
          "type": "text",
          "id": "module_big_title",
          "label": "Module Big Title"
        },
        {
          "type": "text",
          "id": "module_title",
          "label": "Module Title",
          "default": "Default Title"
        },
        {
          "type": "text",
          "id": "module_title_de",
          "label": "Module Title (German)",
          "default": "Standardtitel"
        },
        {
          "type": "text",
          "id": "module_title_fr",
          "label": "Module Title (French)",
          "default": "Titre par défaut"
        },
         {
          "type": "text",
          "id": "module_title_fi",
          "label": "Module Title (Finland)",
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Module Description"
        },
        {
          "type": "richtext",
          "id": "description_de",
          "label": "Module Description (German)",
        },
        {
          "type": "richtext",
          "id": "description_fr",
          "label": "Module Description (French)",
        },
         {
          "type": "richtext",
          "id": "description_fi",
          "label": "Module Description (Finland)",
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
            "type": "text",
            "id": "button1_text",
            "label": "Button 1 Text"
          },
          {
            "type": "text",
            "id": "button1_text_de",
            "label": "Button 1 Text(German)"
          },
          {
            "type": "text",
            "id": "button1_text_fr",
            "label": "Button 1 Text(French)"
          },
          {
            "type": "text",
            "id": "button1_text_fi",
            "label": "Button 1 Text(Finland)"
          },
          {
            "type": "url",
            "id": "button1_url",
            "label": "Button 1 URL"
          },
          {
            "type": "color",
            "id": "button1_background_color",
            "label": "Button 1 Background Color",
          },
          {
            "type": "color",
            "id": "button1_text_color",
            "label": "Button 1 Text Color",
          },
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image row",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="product-content-section">
    <h2 class="iconrow-title" data-localize="{{ section.settings.title }}">
        {% if request.locale.iso_code == 'de' %}
            {{ section.settings.title_de }}
        {% elsif request.locale.iso_code == 'fr' %}
            {{ section.settings.title_fr }}
        {% elsif request.locale.iso_code == 'fi' %}
            {{ section.settings.title_fi }}
        {% else %}
            {{ section.settings.title }}
        {% endif %}
    </h2>
  <div class="smallmodulerow">
    <div class="smallmodule">
        {% for block in section.blocks %}
        <div class="module"
            style="font-size: {{ section.settings.title_font_size }}px; background-color: {{ block.settings.background_color }}; padding: 20px; margin-bottom: 20px;">
          <div class="imgrowrow">
            {% if block.settings.image != blank %}
               {% if block.settings.button1_url != blank %}
            <a href="{{ block.settings.button1_url }}"  target="_blank">
              {% endif %}
              <img src="{{ block.settings.image | img_url: 'original' }}" alt="{{ block.settings.module_title }}" width="{{ block.settings.subheading_image_1_width }}px" height="auto">
               {% if block.settings.button1_url != blank %}
            </a>
                 {% endif %}
            {% endif %}
          </div>
            {%- if block.settings.module_big_title != blank -%}
            <h2 class="module-big-title" style="font-size: 60px;">{{ block.settings.module_big_title }}</h2>
            {% endif %}
            {%- if block.settings.module_title != blank -%}
            <h3 class="module-title" style="font-size: {{ section.settings.title_font_size }}px;">
                {% if request.locale.iso_code == 'de' %}
                    {{ block.settings.module_title_de }}
                {% elsif request.locale.iso_code == 'fr' %}
                    {{ block.settings.module_title_fr }}
                {% elsif request.locale.iso_code == 'fi' %}
                    {{ block.settings.module_title_fi }}
                {% else %}
                    {{ block.settings.module_title }}
                {% endif %}
            </h3>
            {% endif %}
            {%- if block.settings.description != blank -%}
            <div class="module-description" style="font-size: {{ section.settings.description_font_size }}px;">
                {% if request.locale.iso_code == 'de' %}
                    {{ block.settings.description_de }}
                {% elsif request.locale.iso_code == 'fr' %}
                    {{ block.settings.description_fr }}
                  {% elsif request.locale.iso_code == 'fi' %}
                    {{ block.settings.description_fi }}
                {% else %}
                    {{ block.settings.description }}
                {% endif %}
            </div>
            {% endif %}
            {%- if block.settings.button1_text != blank -%}
            <div class="button-container">
                <a href="{{ block.settings.button1_url }}" class="custom-button button1" style="background-color: {{ block.settings.button1_background_color }}; color: {{ block.settings.button1_text_color }}; text-decoration:none;">
                  {% if request.locale.iso_code == 'de' %}
                  {{ block.settings.button1_text_de }}
                {% elsif request.locale.iso_code == 'fr' %}
                  {{ block.settings.button1_text_fr }}
                {% elsif request.locale.iso_code == 'fi' %}
                  {{ block.settings.button1_text_fi }}
                {% else %}
                  {{ block.settings.button1_text }}  
                {% endif %}
                </a>
            </div>
            {% endif %}
        </div>
        {% endfor %}
    </div>
    </div>
</div>



<style>
    .iconrow-title {
        font-size: 30px;
        margin-bottom: 40px;
        text-align: center;
    }

    .product-content-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 50px 20px;
    }

    .smallmodule {
        display: flex;
        justify-content: center;
        align-items: stretch;
        flex-wrap: wrap;
        max-width: 1600px;
        margin: 0 auto;
    }

    .module {
        width: 24%;
        text-align: center;
        margin: 10px;
        border: 1px solid #ccc;
        padding: 6px;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        flex-grow: 1;
    }

    .module img {
        max-width: 100%;
        height: auto;
        margin-bottom: 10px;
    }

    .module a {
        text-decoration: underline;
        color: #1890ff;
    }

    .button-container {
    margin-top: 10px;
    display: flex;
    justify-content: justify-content;
    gap: 10px;
  }

  .custom-button {
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s;
    font-size: 16px;
  }

    @media (max-width: 768px) {
        .module {
            width: 100%;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const modules = document.querySelectorAll('.module');
        let maxHeight = 0;

        modules.forEach(module => {
            const height = module.offsetHeight;
            if (height > maxHeight) {
                maxHeight = height;
            }
        });

        modules.forEach(module => {
            module.style.height = maxHeight + 'px';
        });
    });
</script>