  {%- assign section_title = section.settings.title_fr -%}
{%- elsif request.locale.iso_code == 'fi' and section.settings.title_fi != blank -%}
  {%- assign section_title = section.settings.title_fi -%}
{%- endif -%}

<section id="frame_geometry" class="full-width-section">
  <div class="container">
    <h2 class="section-title">
      {{ section_title | escape }}
    </h2>

    <div class="custom-size-tabs" role="tablist">
      <div class="tab-item-size active" role="tab" data-target="framesize">
        {% assign current_locale = request.locale.iso_code %}
        {% if current_locale == 'de' %}
          Rahmengröße
        {% elsif current_locale == 'fr' %}
          Taille du cadre
        {% elsif current_locale == 'fi' %}
          Rungon koko
        {% else %}
          Frame Size
        {% endif %}
      </div>
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'step_through' %}
            <div class="tab-item-size" role="tab" data-target="stepthrough-{{ forloop.index }}">Step Through</div>
          {% when 'low_step' %}
            <div
              class="tab-item-size"
              data-target="lowstep-{{ forloop.index }}"
            >
              Low Step
            </div>
          {% when 'high_step' %}
            <div class="tab-item-size" role="tab" data-target="highstep-{{ forloop.index }}">High Step</div>
          {% when 'mountain' %}
            <div class="tab-item-size" role="tab" data-target="mountain-{{ forloop.index }}">Geometry</div>
          {% when 'carbon' %}
            <div class="tab-item-size" role="tab" data-target="carbon-{{ forloop.index }}">Geometry</div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="tab-content-area">
      <div id="framesize" class="sizetab-panel active" role="tabpanel">
        <div class="geometry-viewer">
          {% if section.settings.geometry_type == 'custom' and section.settings.custom_geometry_image %}
            {% assign geometry_img = section.settings.custom_geometry_image %}
            <img
              src="{{ geometry_img | img_url: '2400x' }}"
              alt="Bike Geometry Diagram"
              class="geometry-image"
              width="2400"
              height="1600"
              loading="eager"
            >
          {% else %}
            {% assign img_name = false %}
            {% if section.settings.geometry_type == 'trekking' %}
              {% assign img_name = 'Trekking 7.png' %}
            {% elsif section.settings.geometry_type == 'trekking_new' %}
              {% assign img_name = 'trekking_new_size.png' %}
            {% elsif section.settings.geometry_type == 'mountain' %}
              {% assign img_name = 'mountain7.png' %}
            {% elsif section.settings.geometry_type == 'city' %}
              {% assign img_name = 'City_frame.png' %}
            {% endif %}

            {% if img_name %}
              <img
                src="{{ img_name | asset_url }}"
                alt="Bike Geometry Diagram"
                class="geometry-image"
                width="2400"
                height="1600"
                loading="eager"
              >
            {% endif %}
          {% endif %}
        </div>
