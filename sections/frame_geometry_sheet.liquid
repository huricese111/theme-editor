<script>
  const frameSizeViewer = document.querySelector('#framesize .geometry-viewer');
  if (frameSizeViewer) {
    const swipeHint = document.createElement('div');
    swipeHint.className = 'swipe-hint';
    swipeHint.textContent = '← Swipe →';
    frameSizeViewer.appendChild(swipeHint);
  }

  document.addEventListener('DOMContentLoaded', function () {
    function initTabs() {
      document.querySelectorAll('.sizetab-panel').forEach((panel, index) => {
        if (index === 0) {
          panel.classList.add('active');
          panel.style.display = 'block';
        } else {
          panel.classList.remove('active');
          panel.style.display = 'none';
        }
      });

      const initialTab = document.querySelector('.tab-item-size[data-target="framesize"]');
      if (initialTab) initialTab.classList.add('active');

      document.querySelector('.custom-size-tabs')?.addEventListener('click', (event) => {
        const targetTab = event.target.closest('.tab-item-size');
        if (!targetTab) return;

        document.querySelectorAll('.tab-item-size').forEach((tab) => tab.classList.remove('active'));
        targetTab.classList.add('active');

        const targetId = targetTab.dataset.target;
        document.querySelectorAll('.sizetab-panel').forEach((panel) => {
          if (panel.id === targetId) {
            panel.classList.add('active');
            panel.style.display = 'block';
          } else {
            panel.classList.remove('active');
            panel.style.display = 'none';
          }
        });
      });
    }

    function adjustMobileFrameSize() {
      if (window.innerWidth > 768) return;

      const frameViewer = document.querySelector('#framesize .geometry-viewer');
      if (frameViewer) {
        frameViewer.style.height = '300px';
      }
    }

    initTabs();

    adjustMobileFrameSize();

    window.addEventListener('resize', adjustMobileFrameSize);
  });

  setTimeout(() => {
    const hint = document.querySelector('.swipe-hint');
    if (hint) {
      hint.style.display = 'none';
    }
  }, 5000);
</script>

