<div class="slideshow-container">
    {% for slide in section.blocks %}
    <div class="Bikebanner fade slide{{ forloop.index }}" style="background-color: {{ slide.settings.background_color }};">
        <div class="Bikebanner-content">
            <div class="text-container">
                <div class="salestagrow">
                    {% for i in (1..3) %}
                        {% capture salestag_key %}salestag_{{ i }}{% endcapture %}
                        {% capture salestag_key_de %}salestag_{{ i }}_de{% endcapture %}
                        {% capture salestag_key_fr %}salestag_{{ i }}_fr{% endcapture %}
                        {% assign salestag = slide.settings[salestag_key] %}
                        {% if salestag != blank %}
                            <span class="salestag" data-localize="{{ slide.settings[salestag_key] }}">
                                {% if request.locale.iso_code == 'de' %}
                                    {{ slide.settings[salestag_key_de] }}
                                {% elsif request.locale.iso_code == 'fr' %}
                                    {{ slide.settings[salestag_key_fr] }}
                                   {% elsif request.locale.iso_code == 'fi' %}
                                    {{ slide.settings[salestag_key_fi] }}
                                {% else %}
                                    {{ salestag }}
                                {% endif %}
                            </span>
                        {% endif %}
                    {% endfor %}
                </div>
                <h3 data-localize="{{ slide.settings.title }}">
                    {% if request.locale.iso_code == 'de' %}
                        {{ slide.settings.title_de }}
                    {% elsif request.locale.iso_code == 'fr' %}
                        {{ slide.settings.title_fr }}
                    {% elsif request.locale.iso_code == 'fi' %}
                        {{ slide.settings.title_fi }}
                    {% else %}
                        {{ slide.settings.title }}
                    {% endif %}
                </h3>
                <p data-localize="{{ slide.settings.description }}">
                    {% if request.locale.iso_code == 'de' %}
                        {{ slide.settings.description_de }}
                    {% elsif request.locale.iso_code == 'fr' %}
                        {{ slide.settings.description_fr }}
                     {% elsif request.locale.iso_code == 'fi' %}
                        {{ slide.settings.description_fi }}
                    {% else %}
                        {{ slide.settings.description }}
                    {% endif %}
                </p>
                <a href="{{ slide.settings.link }}" target="_self" class="bikebutton" style="background-color: {{ slide.settings.btn_background_color }}; color: {{ slide.settings.btn_text_color }};">
                    {% if request.locale.iso_code == 'de' %}
                        {{ slide.settings.btntext_de }}
                    {% elsif request.locale.iso_code == 'fr' %}
                        {{ slide.settings.btntext_fr }}
                     {% elsif request.locale.iso_code == 'fi' %}
                        {{ slide.settings.btntext_fi }}
                    {% else %}
                        {{ slide.settings.btntext }}
                    {% endif %}
                    &rarr;
                </a>
            </div>
        </div>
        <div class="Bikebanner-image">
            <img data-localize="{{ slide.settings.image }}" src="{{ slide.settings.image | img_url: 'original' }}" width="100%">
        </div>
    </div>
    {% endfor %}

    <button class="pagbutton prev" onclick="plusSlides(-1)">&#10094;</button>
    <button class="pagbutton next" onclick="plusSlides(1)">&#10095;</button>
    
    <div class="pagination">
        {% for i in (1..section.blocks.size) %}
        <span class="dot" onclick="currentSlide({{ i }})"></span>
        {% endfor %}
    </div>
</div>

