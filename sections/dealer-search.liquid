{% assign display_map = false %}
{%- if section.settings.api_key != blank and section.settings.map_address -%}
  {% assign display_map = true %}
  <script src="{{ 'location-map.js' | asset_url }}" defer></script>
{%- endif -%}

<div
  class="section-id-{{ section.id }} map-section use-color-scheme use-color-scheme--{{ section.settings.color_scheme }}{% unless section.settings.full_width %} map-section--map-constrained{% endunless %}{% if display_map %} map-section--display-map{% endif %}"
  {%- render 'animation-attrs', attrs: 'data-cc-animate' -%}
>
  <div class="container">
    <div class="map-section__wrapper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'location' -%}
            <div class="map-section__content map-section__text" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h2>{{ block.settings.heading | escape }}</h2>
              {% endif %}
              {% if block.settings.address != blank %}
                <div class="rte lightly-spaced-row">{{ block.settings.address }}</div>
              {% endif %}
              {% if block.settings.button != blank and section.settings.map_address != blank %}
                <div>
                  <a
                    href="https://maps.google.com?daddr={{ section.settings.map_address | escape }}"
                    target="_blank"
                    class="btn btn--secondary"
                  >
                    {% if block.settings.show_pin %}
                      <span class="icon">{% render 'icon-location' %}</span>
                    {% endif %}
                    <span>{{ block.settings.button | escape }}</span>
                  </a>
                </div>
              {% endif %}
            </div>
        {%- endcase -%}
      {%- endfor -%}

      <div class="map-section__content map-section__map">
        {%- if display_map -%}
          {%- if section.settings.map_type == 'dynamic' -%}
            {% render 'location-map',
              api_key: section.settings.api_key,
              address: section.settings.map_address,
              map_style: section.settings.map_style
            %}
          {%- else -%}
            <iframe
              class="map"
              src="https://www.google.com/maps/embed/v1/place?key={{ section.settings.api_key }}&q={{ section.settings.map_address }}&zoom=14"
              width="400"
              height="300"
              frameborder="0"
              style="border:0"
              referrerpolicy="no-referrer-when-downgrade"
              allowfullscreen
            ></iframe>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Find a dealer",
  "class": "section-map",
  "disabled_on": {
    "groups": ["aside"]
  },
  "settings": [
    {
      "id": "full_width",
      "type": "checkbox",
      "label": "Full page width",
      "default": true
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "1",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ]
    },
    {
      "type": "header",
      "content": "Map"
    },
    {
      "id": "map_address",
