<style>
  .slideshow-container {
    position: relative;
    width: 100%;
    margin: auto;
    overflow: hidden;
    color: #000;
    height: 640px;
  }

  .Bikebanner {
    display: flex;
    place-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .Bikebanner.active {
    opacity: 1;
    position: relative;
  }

  .bikebutton {
    font-weight: 400;
    border-radius: 50px;
    display: inline-block;
    line-height: 1;
    padding: 12px 20px;
    text-align: center;
    cursor: pointer;
    outline: 0;
    text-decoration: none;
  }

  .bikebutton:hover {
    opacity: 0.8;
  }

  .Bikebanner-image {
    object-fit: contain;
    object-position: center center;
    width: 700px;
    height: 480px;
  }

  .Bikebanner-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .Bikebanner-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 20px;
    box-sizing: border-box;
    width: 500px;
  }

  .text-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: 20px;
    width: 100%;
    max-width: 500px;
  }

  .Bikebanner-content h3 {
    margin: 0;
    font-size: 70px;
    line-height: 80px;
    font-weight: 700;
    color: #000;
    text-align: left;
  }

  .Bikebanner-content p {
    font-weight: 400;
    font-size: 18px;
    color: #000;
    text-align: left;
  }

  .pagination {
    text-align: center;
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
  }

  .dot {
    display: inline-block;
    width: 15px;
    height: 15px;
    margin: 0 5px;
    border-radius: 50%;
    background-color: #bbb;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .dot.active {
    background-color: #242424;
  }

  .pagbutton {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.6);
    border: none;
    padding: 10px;
    cursor: pointer;
    font-size: 18px;
    border-radius: 50%;
    color: #fff;
    width: 60px;
    height: 60px;
    opacity: 0.7;
    transition: opacity 0.3s ease;
    z-index: 10;
  }

  .pagbutton:hover {
    opacity: 1;
  }

  .pagbutton.prev {
    left: 10px;
  }

  .pagbutton.next {
    right: 10px;
  }

  .salestag {
    font-size: 22px;
    line-height: 40px;
    height: 40px;
    margin: 0 0 10px;
    color: #000;
    text-align: center;
    display: inline-block;
    padding-left: 10px;
    padding-right: 10px;
    background-color: #f8e71c;
    border-radius: 8px;
    white-space: nowrap;
    font-weight: 700;
  }

  .salestagrow {
    display: flex;
    gap: 0.6rem;
  }

  @media (max-width: 768px) {
    .slideshow-container {
      height: auto;
      min-height: 0;
    }

    .Bikebanner {
      position: relative;
      height: 100vh;
      min-height: 600px;
      opacity: 1;
      display: block;
    }

    .Bikebanner:last-child {
      margin-bottom: 0;
    }

    .Bikebanner-image {
      order: 1;
      width: 140%;
      height: 60vh;
      max-height: 60vh;
      overflow: visible;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      margin-left: -20%;
      margin-right: -20%;
    }

    .Bikebanner-image img {
      width: 100%;
      height: 100%;
      max-width: none;
      object-fit: cover;
      object-position: center;
    }

    .Bikebanner-content {
      order: 2;
      position: absolute;
      padding: 20px;
      width: calc(100% - 40px);
      z-index: 2;
      bottom: 20px;
      top: auto;
      left: 0;
      height: auto;
    }

    .text-container {
      border-radius: 12px;
      margin-top: 0;
      position: relative;
      z-index: 3;
      width: 100%;
      box-sizing: border-box;
    }

    .Bikebanner-content h3 {
      font-size: 36px;
      line-height: 40px;
    }

    .Bikebanner-content p {
      display: none;
    }

    .bikebutton {
      margin-top: 10px;
    }

    .pagination,
    .pagbutton {
      display: none !important;
    }

    .salestag {
      font-size: 18px;
      line-height: 28px;
      height: 28px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slideshow = document.querySelector('.slideshow-container');
    if (!slideshow) return;

    const slides = slideshow.querySelectorAll('.Bikebanner');
    const dots = slideshow.querySelectorAll('.dot');
    const prevBtn = slideshow.querySelector('.pagbutton.prev');
    const nextBtn = slideshow.querySelector('.pagbutton.next');

    const isDesktop = window.innerWidth > 768;
    let currentIndex = 0;
    let autoplayInterval;

    function initSlideshow() {
      if (!isDesktop || slides.length <= 1) {
        slides.forEach((slide) => slide.classList.add('active'));
        return;
      }

      slides[0].classList.add('active');
      if (dots.length > 0) dots[0].classList.add('active');

      prevBtn && prevBtn.addEventListener('click', showPrevSlide);
      nextBtn && nextBtn.addEventListener('click', showNextSlide);

      dots.forEach((dot) => {
        dot.addEventListener('click', () => {
          showSlide(parseInt(dot.dataset.index) - 1);
        });
      });

      startAutoplay();

      window.addEventListener('resize', handleResize);
    }

    function showSlide(index) {
      if (index < 0) index = slides.length - 1;
      if (index >= slides.length) index = 0;

      slides.forEach((slide) => slide.classList.remove('active'));
      slides[index].classList.add('active');

      dots.forEach((dot) => dot.classList.remove('active'));
      if (dots[index]) dots[index].classList.add('active');

      currentIndex = index;
    }

    function showNextSlide() {
      showSlide(currentIndex + 1);
      resetAutoplay();
    }

    function showPrevSlide() {
      showSlide(currentIndex - 1);
      resetAutoplay();
    }

    function startAutoplay() {
      if (slides.length <= 1) return;
      autoplayInterval = setInterval(showNextSlide, 5000);
    }

    function resetAutoplay() {
      clearInterval(autoplayInterval);
      startAutoplay();
    }

    function handleResize() {
      if (window.innerWidth <= 768) {
        clearInterval(autoplayInterval);
        if (prevBtn) prevBtn.style.display = 'none';
        if (nextBtn) nextBtn.style.display = 'none';
      } else if (isDesktop) {
        initSlideshow();
      }
    }

    if (isDesktop && slides.length > 1) {
      if (prevBtn) prevBtn.style.display = 'block';
      if (nextBtn) nextBtn.style.display = 'block';
    }

    initSlideshow();
  });
</script>
