{%- liquid
  assign zoom_size = 5000
  assign min_aspect_ratio = 0.6

  assign current_variant = product.selected_or_first_available_variant
  assign featured_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media

  unless product.has_only_default_variant
    if section.settings.select_first_variant == false and product.variants.size > 1
      assign current_variant = product.selected_variant | default: false
      unless current_variant
        assign featured_media = product.featured_media
      endunless
    endif
  endunless

  assign product_form_id = 'product-form-' | append: section.id | append: '-' | append: product.id

  assign enable_media_grouping = false
  if section.settings.enable_media_grouping
    for variant in product.variants
      if variant.featured_media
        assign enable_media_grouping = true
        break
      endif
    endfor
  endif
-%}

<style>
  .product-page-container {
    margin: 0;
    padding: 0;
    width: 100%;
    height: calc(100vh - var(--navbar-height));
    display: flex;
    overflow: hidden;
    position: relative;
  }

  :root {
    --navbar-height: 80px;
  }

  .section-main-product.page-section-spacing {
    margin-top: 0 !important;
    margin-bottom: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }

  .product-media-section {
    width: 60%;
    height: 100%;
    overflow: hidden;
    position: relative;
    background-color: #f9f9f9;
    padding: 0;
  }

  .product-details-section {
    width: 40%;
    height: 100%;
    overflow-y: auto;
    padding: 20px 40px;
    background-color: #fff;
    box-sizing: border-box;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .product-details-section::-webkit-scrollbar {
    display: none;
  }

  .media-gallery-container {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .media-gallery-container img,
  .media-gallery-container video,
  .media-gallery-container iframe {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .product-info-content {
    max-width: 100%;
  }

  @media (min-width: 768px) {
    .product-info .product-column-right {
      width: 100%;
    }
  }

  @media (min-width: 1040px) {
    .product-info .media-gallery-size-large {
      width: 100%;
      height: 100%;
    }
  }

  @media screen and (max-width: 1024px) {
    .product-page-container {
      flex-direction: column;
      height: auto;
    }

    .product-media-section,
    .product-details-section {
      width: 100%;
      height: auto;
    }

    .product-media-section {
      height: 60vh;
    }

    .product-details-section {
      height: auto;
      padding: 20px;
      overflow: visible;
    }
  }

  @media screen and (max-width: 768px) {
    :root {
      --navbar-height: 60px;
    }

    .product-media-section {
      height: 50vh;
    }
  }

  @media screen and (max-width: 480px) {
    .product-media-section {
      height: 40vh;
    }

    .product-details-section {
      padding: 15px;
    }
  }

  @media screen and (max-width: 320px) {
    :root {
      --navbar-height: 50px;
    }

    .product-media-section {
      height: 35vh;
    }

    .product-details-section {
      padding: 10px;
    }

    .product-info-content .title-row h1 {
      font-size: 1.5rem;
    }
  }

  @media screen and (min-width: 2560px) {
    .product-details-section {
      padding: 30px 60px;
    }

    .product-info-content {
      max-width: 80%;
      margin: 0 auto;
    }
  }
</style>

