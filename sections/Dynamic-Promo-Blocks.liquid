<style>
    :root {
      --banner-height-desktop: {{ section.settings.desktop_height }}px;
      --banner-height-mobile: {{ section.settings.mobile_height }}px;
      --module-radius: 12px;
      --module-padding: 20px;
      --button-radius: 50px;
      --button-padding: 10px 20px;
      --button-font-size: 14px;
      --tag-bg-color: #f8e71c;
      --tag-color: #000;
      --desktop-gap: 20px;
    }

     .promo-section-container {
      padding: 20px;
      box-sizing: border-box;
    }

    .banner-desktop {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      gap: var(--desktop-gap);
      width: 100%;
      min-height: var(--banner-height-desktop);
    }

    .banner-left {
      grid-column: 1;
      grid-row: 1;
      height: 100%;
    }

    .banner-right {
      grid-column: 2;
      grid-row: 1;
      display: grid;
      grid-template-rows: 1fr 1fr;
      gap: var(--desktop-gap);
      height: 100%;
    }

    .banner-right-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--desktop-gap);
    }

    .banner-mobile {
      display: flex;
      flex-direction: column;
      width: 100%;
    }

    .banner-mobile-left,
    .banner-mobile-right-row {
      height: var(--banner-height-mobile);
    }

    .module {
      position: relative;
      padding: var(--module-padding);
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      background-repeat: no-repeat;
      border-radius: var(--module-radius);
      background-size: cover;
      overflow: hidden;
      height: 100%;
    }

    .module::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(0, 0, 0, 0.2);
      z-index: 1;
    }

    .module__inner {
      position: relative;
      z-index: 2;
      display: flex;
      flex-direction: column;
      height: 100%;
       justify-content: flex-end;
    }

     .module-position-top .module__inner {
    justify-content: flex-start;
  }

  .module-position-center .module__inner {
    justify-content: center;
  }

  .module-position-bottom .module__inner {
    justify-content: flex-end;
  }

    .module__content {
      padding: 10px;
      min-width: 140px;
    }

    .banner-left .module__title {
      font-weight: 700;
      font-size: {{ section.settings.left_title_size }}px;
      line-height: {{ section.settings.left_title_size | times: 1.14 }}px;
      margin: 0 0 20px;
    }

    .module__title--medium {
      font-weight: 700;
      font-size: {{ section.settings.right1_title_size }}px;
      line-height: {{ section.settings.right1_title_size | times: 1.28 }}px;
    }

    .module__title--small {
      font-weight: 700;
      font-size: {{ section.settings.right2_title_size }}px;
      line-height: {{ section.settings.right2_title_size | times: 1.3 }}px;
    }

    .module__tag {
      margin: 0 0 10px;
      font-size: 22px;
      line-height: 40px;
      height: 40px;
      font-family: Arial, sans-serif;
      font-weight: 600;
      color: var(--tag-color);
      text-align: center;
      display: inline-block;
      padding: 0 10px;
      background-color: var(--tag-bg-color);
      border-radius: 8px;
      white-space: nowrap;
    }

    .module__button {
      border-radius: var(--button-radius);
      text-decoration: none;
      font-weight: 400;
      font-size: var(--button-font-size);
      cursor: pointer;
      margin-top: 10px;
      align-self: flex-start;
      padding: var(--button-padding);
      display: inline-block;
      transition: opacity 0.3s ease;
    }

    .module__button:hover {
      opacity: 0.8;
    }


    .hide-on-mobile {
      display: none;
    }

    @media (min-width: 769px) {
      .banner-mobile {
        display: none;
      }
    }

    @media (max-width: 768px) {
      .promo-section-container {
      padding: 0;
    }

      .module {
      border-radius: 0;
    }

      .banner-desktop {
        display: none;
      }

      .banner-mobile {
        display: block;
      }

      .banner-mobile-left .module,
      .banner-mobile-right .module {
        height: 100%;
      }

      .banner-mobile-left,
      .banner-mobile-right-row {
